<h1>{{ resource_allowed_project_title }}</h1>
<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title"><i
                    class="fa fa-archive tlp-pane-title-icon"></i> {{ resource_allowed_project_subtitle }}</h1>
        </div>
        <section class="tlp-pane-section">
            <p class="tlp-alert-warning">{{ information }}</p>

            <div id="allowed-projects-list">

                <form id="projects-allowed-form" action="{{ update_allowed_projects_action }}" method="POST">
                    <div class="tlp-table-actions" id="allowed-projects-list-actions">
                        {{{ update_allowed_projects_action_csrf }}}

                        <div id="project-to-allow-autocompleter" class="tlp-form-element tlp-form-element-append">
                            <input id="project-to-allow" name="project-to-allow" type="text" class="tlp-input" size="30"
                                   placeholder="{{ resource_allowed_project_list_allow_placeholder }}"
                            >
                            <button type="submit" name="allow-project" class="tlp-append tlp-button-primary"
                                    value="1">
                                <i class="fa fa-arrow-circle-o-right tlp-button-icon"></i> {{ resource_allowed_project_list_allow_project }}
                            </button>
                        </div>
                        <div class="tlp-form-element" id="search-project-to-migrate">
                            <input type="search" class="tlp-search" id="filter-projects" size="28"
                                   placeholder="{{ resource_allowed_project_list_filter_placeholder }}"
                                   {{# there_is_no_project }}disabled{{/ there_is_no_project }}>
                        </div>
                    </div>

                    <table class="tlp-table" id="table-project-list">
                        <thead>
                            <tr>
                                <th class="tlp-table-cell-numeric">{{ resource_allowed_project_list_id }}</th>
                                <th class="project-already-migrated">{{ resource_allowed_project_list_name }}</th>
                            </tr>
                        </thead>
                        <tbody>

                        {{# there_is_no_project }}
                            <tr>
                                <td colspan="2"
                                    class="tlp-table-cell-empty">{{ resource_allowed_project_list_empty }}</td>
                            </tr>
                        {{/ there_is_no_project }}
                        {{^ there_is_no_project }}
                            {{# allowed_projects }}
                                <tr>
                                    <td class="tlp-table-cell-numeric">
                                        <a href="{{ url_project }}?group_id={{ getGroupId }}">{{ getId }}</a>
                                    </td>
                                    <td>{{ getUnconvertedPublicName }}</td>
                                </tr>
                            {{/ allowed_projects }}
                        {{/ there_is_no_project }}

                        </tbody>
                    </table>
                </form>
            </div>
        </section>
    </div>
</section>
