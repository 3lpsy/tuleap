<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">{{ settings_title }}</h1>
        </div>

        <section class="tlp-pane-section">
            <p>
                {{ usage_information }}
            </p>
            <form method="POST">
                {{# csrf_token }}
                    {{> csrf_token_input }}
                {{/ csrf_token }}
                <div class="tlp-form-element">
                    <label for="cache-maximum-credentials" class="tlp-label">{{ maximum_credentials_label }}</label>
                    <input id="cache-maximum-credentials" type="number" min="0" name="cache-maximum-credentials" value="{{ maximum_credentials }}" class="tlp-input" size="5">
                </div>
                <div class="tlp-form-element">
                    <label for="cache-lifetime" class="tlp-label">{{ lifetime_label }}</label>
                    <input id="cache-lifetime" type="number" name="cache-lifetime" min="0" value="{{ lifetime }}" class="tlp-input" size="5">
                </div>
                <div id="submit-button-authentication-cache-settings">
                    <button class="tlp-button-primary" type="submit">
                        <i class="fa fa-save tlp-button-icon"></i> {{ save_settings }}
                    </button>
                </div>
            </form>
        </section>
    </div>
</section>