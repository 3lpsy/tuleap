<button id="project-admin-ugroup-show-permissions-modal"
        type="button"
        data-target-modal-id="project-admin-ugroup-permissions-modal"
        class="tlp-button-primary tlp-button-outline"
>
    <i class="fa fa-lock tlp-button-icon"></i>
    {{# gettext }}See permissions{{/ gettext }}
</button>

<div id="project-admin-ugroup-permissions-modal"
     class="tlp-modal"
     role="dialog"
     aria-labelledby="project-admin-ugroup-permissions-modal-label"
>
    <div class="tlp-modal-header">
        <h1 class="tlp-modal-title" id="project-admin-ugroup-permissions-modal-label">
            <i class="fa fa-lock tlp-modal-title-icon"></i>
            {{# gettext }}User group permissions{{/ gettext }}
        </h1>
        <div class="tlp-modal-close" data-dismiss="modal" aria-label="{{# gettext }}Close{{/ gettext }}">Ã—</div>
    </div>
    <div class="tlp-modal-body">
        <table class="tlp-table">
            <thead>
                <tr>
                    <th>{{# gettext }}Permission{{/ gettext }}</th>
                    <th>{{# gettext }}Resource{{/ gettext }}</th>
                </tr>
            </thead>
            <tbody>
                {{^ has_permissions }}
                    <td colspan="2" class="tlp-table-cell-empty">
                        {{# gettext }}This user group is not granted any permissions yet{{/ gettext }}
                    </td>
                {{/ has_permissions }}
                {{# permissions }}
                    <tr>
                        <td>{{ permission_name }}</td>
                        <td>{{{ content }}}</td>
                    </tr>
                {{/permissions}}
            </tbody>
        </table>
    </div>
    <div class="tlp-modal-footer">
        <button type="button" class="tlp-button-primary tlp-modal-action" data-dismiss="modal">
            {{# gettext }}Close{{/ gettext }}
        </button>
    </div>
</div>
