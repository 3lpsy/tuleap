<h1 class="tlp-framed-horizontally">{{ admin_section_title }}</h1>

<nav class="tlp-tabs">
    {{# getEntries }}
        {{# hasSubItems }}
            <div class="tlp-tab{{# is_active }} tlp-tab-active{{/ is_active }}">
                {{ label }} <i class="fa fa-caret-down"></i>
                <nav class="tlp-tab-menu">
                    {{# menu_items }}
                        <a href="{{ html_url }}" class="tlp-tab-menu-item">{{ label }}</a>
                    {{/ menu_items }}
                </nav>
            </div>
        {{/ hasSubItems }}
        {{^ hasSubItems }}
            <a href="{{ html_url }}" class="tlp-tab{{# is_active }} tlp-tab-active{{/ is_active }}">{{ label }}</a>
        {{/ hasSubItems }}
    {{/ getEntries }}
</nav>
