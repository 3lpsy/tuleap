<div id="login-box">
    <a id="login-help" href="mailto:{{ help_email }}?Subject={{ help_subject }}">
        <span>{{ need_help }}</span>
        <i class="icon-question-sign"></i>
    </a>

    <h1>{{ account_login_login_with_tuleap }}</h1>

    <div id="login-intro">
        {{{ login_intro }}}
    </div>

    <form action="/account/login.php" method="post" name="form_login" autocomplete="off">
        <input type="hidden" name="return_to" value="{{ return_to }}">
        <input type="hidden" name="pv" value="{{ pv }}">

        <input type="text" id="form_loginname" name="form_loginname" placeholder="{{ account_login_name }}" value="{{ form_loginname }}"  required autofocus>
        <input type="password" id="form_pw" name="form_pw" placeholder="{{ account_login_password }}" value="" required>

        {{# toggle_ssl }}
            <label id="login-ssl">
                <input type="checkbox" name="stay_in_ssl" value="1" checked="checked" /> {{{ stay_in_ssl }}}
            </label>
        {{/ toggle_ssl }}

        <button type="submit" name="login" class="btn btn-primary">{{ account_login_login_btn }}</button>

        {{# allow_password_recovery }}
            <a id="login-lost-password" href="lostpw.php">{{ account_login_lost_pw }}</a>
        {{/ allow_password_recovery }}
    </form>

    {{{ additional_connectors }}}
</div>
