<div class="search-bar">
    <form action="/search/" method="post">
        <div class="input-append">
            <input class="input-xlarge" type="text" id="words" name="words" value="{{ words }}">
            <input type="hidden" name="type_of_search" value="{{ type_of_search }}">
            <input type="hidden" name="exact" value="0">
            <button class="btn"><i class="icon-search"></i></button>
        </div>
    </form>
</div>

<div class="search-page">
    <div class="accordion" id="search-accordion">
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#search-accordion" href="#collapseOne">{{ simple_search }}</a>
        </div>
        <div id="collapseOne" class="accordion-body collapse in">
          <div class="accordion-inner">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="#" data-search-type="soft">soft</a></li>
                <li><a href="#" data-search-type="people">people</a></li>
                <li><a href="#" data-search-type="forums">forums</a></li>
                <li><a href="#" data-search-type="snippets">snippets</a></li>
                <li><a href="#" data-search-type="tracker">tracker</a></li>
                <li><a href="#" data-search-type="wiki">wiki</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#search-accordion" href="#collapseTwo">{{ fulltext_search }}</a>
        </div>
        <div id="collapseTwo" class="accordion-body collapse">
          <div class="accordion-inner">
            Fulltext facets
          </div>
        </div>
      </div>
    </div>

    <div class="search-results">
        {{> results }}
    </div>

    <div style="clear: both"></div>
</div>
