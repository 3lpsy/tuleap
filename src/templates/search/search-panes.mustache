{{# search_panes }}
<div class="search-pane">
    <div class="search-pane-header">{{ title }}</div>
    <div class="search-pane-body">
        <ul>
            {{# search_types }}
            <li>
                {{# has_facets }}
                    <span class="search-type">{{ title }}</span>
                    {{> facets }}
                {{/ has_facets }}
                {{^ has_facets }}
                    <a href="{{ url }}" class="search-type" data-search-type="{{ search_type }}">{{ title }}</a>
                {{/ has_facets }}
            </li>
            {{/ search_types }}
        </ul>
    </div>
</div>
{{/ search_panes }}