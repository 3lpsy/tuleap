<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">
                {{# is_a_user_group_selected }}
                    {{# gettext }} News {{ user_group_name }} can see {{/ gettext }}
                {{/is_a_user_group_selected}}
                {{^ is_a_user_group_selected }}
                    {{# gettext }} News {{/ gettext }}
                {{/is_a_user_group_selected}}
            </h1>
        </div>

        <section class="tlp-pane-section">
            <table class="tlp-table">
                <thead>
                <tr>
                    <th> {{# gettext }} News {{/ gettext }}</th>
                    <th> {{# gettext }} Visibility {{/ gettext }}</th>
                </tr>
                </thead>
                <tbody>
                {{# news }}
                    <tr>
                        <td>
                            <a href="{{ admin_quicklink }}">{{ name }}</a>
                        </td>
                        {{# is_public }}
                            <td class="permission-per-group-public-news">
                                <i class="fa fa-fw fa-unlock"></i>
                                {{# gettext }}Public{{/ gettext }}
                            </td>
                        {{/ is_public }}
                        {{^ is_public }}
                            <td class="permission-per-group-private-news">
                                <i class="fa fa-fw fa-lock"></i>
                                {{# gettext }}Private{{/ gettext }}
                            </td>
                        {{/ is_public }}
                    </tr>
                {{/ news }}
                {{^ has_news }}
                    <tr>
                        <td colspan="2" class="tlp-table-cell-empty">
                            {{# is_a_user_group_selected }}
                                {{# gettext }} {{ user_group_name }} can't see any news {{/ gettext }}
                            {{/is_a_user_group_selected}}
                            {{^ is_a_user_group_selected }}
                                {{# gettext }} The project hasn't any news {{/ gettext }}
                            {{/is_a_user_group_selected}}
                        </td>
                    </tr>
                {{/ has_news }}
                </tbody>
            </table>
        </section>

    </div>
</section>