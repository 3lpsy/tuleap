{{# search_form_presenter}}
    <form action="/search/" method="post" class="navbar-search pull-left">
        {{# hidden_fields }}
            <input type="hidden" name="{{ name }}" value="{{ value }}" />
        {{/ hidden_fields }}
        <input type="hidden" name="type_of_search" value="{{{ selected_entry }}}" />
        <input type="hidden" name="exact" value="0" />

        <div class="input-append">
            <input type="text" name="words" class="span2" placeholder="{{ search_placeholder }}" />
            <button class="btn"><i class="icon-search"></i></button>
        </div>
    </form>
{{/ search_form_presenter}}