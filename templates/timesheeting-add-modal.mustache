<div id="timesheeting-add-time-modal"
     class="modal hide fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="timesheeting-add-time-modal-title"
     aria-hidden="true"
>
    <div class="modal-header">
        <h3>{{# dgettext }} tuleap-timesheeting | Add a new time {{/ dgettext }}</h3>
    </div>

    <form action="" method="post">
        <div class="modal-body">
            <label>{{# dgettext }} tuleap-timesheeting | Step {{/ dgettext }}</label>
            <input type="text" name="timesheeting-new-time-step">
            <label>{{# dgettext }} tuleap-timesheeting | Time {{/ dgettext }}</label>
            <input type="text" name="timesheeting-new-time-time" placeholder="00:00" pattern="[0-9]{2}:[0-9]{2}">
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{# gettext }}Close{{/ gettext }}</button>
            <input type="submit"
                   class="btn btn-primary"
                   name="timesheeting-add-time"
                   value="{{# dgettext }} tuleap-timesheeting | Add time {{/ dgettext }}"
            >
        </div>
    </form>
</div>