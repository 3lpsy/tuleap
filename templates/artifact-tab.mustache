<fieldset class="tracker_artifact_fieldset">
    <div class="tracker_artifact_fieldset_content timesheeting-from">
        {{# user_can_add_time }}
            <a class="btn btn-primary timesheeting-add-button" href="#timesheeting-add-time-modal" data-toggle="modal">
                <i class="icon-plus"></i> {{# dgettext }} tuleap-timesheeting | Add {{/ dgettext }}
            </a>
        {{/ user_can_add_time }}
        <table class="table">
            <thead>
                <tr>
                    <th>{{# dgettext }} tuleap-timesheeting | Date {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-timesheeting | User {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-timesheeting | Steps {{/ dgettext }}</th>
                    <th>{{# dgettext }} tuleap-timesheeting | Time {{/ dgettext }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{# has_times }}
                    {{# times }}
                        <tr>
                            <td>{{ day }}</td>
                            <td>{{ user }}</td>
                            <td>{{ step }}</td>
                            <td>{{ time }}</td>
                            <td>
                                <div>
                                    <a class="timesheeting-edit-action timesheeting-action-not-clickable" href="#">
                                        <i class="icon-pencil"></i>
                                        {{# dgettext }} tuleap-timesheeting | Update {{/ dgettext }}
                                    </a>
                                    <a class="timesheeting-action-not-clickable" href="#">
                                        <i class="icon-trash"></i>
                                        {{# dgettext }} tuleap-timesheeting | Delete {{/ dgettext }}
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/ times }}
                    <tr>
                        <td colspan="3"></td>
                        <td class="total-timesheeting-row">âˆ‘ {{ total_time }}</td>
                        <td></td>
                    </tr>
                {{/ has_times }}


                {{^ has_times }}
                    <tr>
                        <td class="table-cell-empty" colspan="5">
                            {{# dgettext }} tuleap-timesheeting | No times saved {{/ dgettext }}
                        </td>
                    </tr>
                {{/ has_times }}
            </tbody>
        </table>
    </div>

    {{# user_can_add_time }}
        {{> timesheeting-add-modal }}
    {{/ user_can_add_time }}
</fieldset>