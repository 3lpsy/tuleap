require_once('include/DataAccessObject.class');

/**
 *  Data Access Object for DfRules 
 */
class DfRulesDao extends DataAccessObject {
    /**
    * Constructs the DfRulesDao
    * @param $da instance of the DataAccess class
    */
    function DfRulesDao( & $da ) {
        DataAccessObject::DataAccessObject($da);
    }
    
    /**
    * Gets all tables of the db
    * @return DataAccessResult
    */
    function & searchAll() {
        $sql = "SELECT * FROM df_rules";
        return $this->retrieve($sql);
    }
    
    /**
    * Searches DfRules by Id 
    * @return DataAccessResult
    */
    function & searchById($id) {
        $sql = sprintf("SELECT group_artifact_id, field_id, condtion_id FROM df_rules WHERE id = %s",
				$this->da->quoteSmart($id));
        return $this->retrieve($sql);
    }

    /**
    * Searches DfRules by GroupArtifactId 
    * @return DataAccessResult
    */
    function & searchByGroupArtifactId($groupArtifactId) {
        $sql = sprintf("SELECT id, field_id, condtion_id FROM df_rules WHERE group_artifact_id = %s",
				$this->da->quoteSmart($groupArtifactId));
        return $this->retrieve($sql);
    }

    /**
    * Searches DfRules by FieldId 
    * @return DataAccessResult
    */
    function & searchByFieldId($fieldId) {
        $sql = sprintf("SELECT id, group_artifact_id, condtion_id FROM df_rules WHERE field_id = %s",
				$this->da->quoteSmart($fieldId));
        return $this->retrieve($sql);
    }

    /**
    * Searches DfRules by CondtionId 
    * @return DataAccessResult
    */
    function & searchByCondtionId($condtionId) {
        $sql = sprintf("SELECT id, group_artifact_id, field_id FROM df_rules WHERE condtion_id = %s",
				$this->da->quoteSmart($condtionId));
        return $this->retrieve($sql);
    }


    /**
    * create a row in the table df_rules 
    * @return true or id(auto_increment) if there is no error
    */
    function create($group_artifact_id, $field_id, $condtion_id) {
		$sql = sprintf("INSERT INTO df_rules (group_artifact_id, field_id, condtion_id) VALUES (%s, %s, %s)",
				$this->da->quoteSmart($group_artifact_id),
				$this->da->quoteSmart($field_id),
				$this->da->quoteSmart($condtion_id));
        $inserted = $this->update($sql);
        if ($inserted) {
            $dar =& $this->retrieve("SELECT LAST_INSERT_ID() AS id");
            if ($row = $dar->getRow()) {
                $inserted = $row['id'];
            } else {
                $inserted = $dar->isError();
            }
        } 
        return $inserted;
    }

}


?>