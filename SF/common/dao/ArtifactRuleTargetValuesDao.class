require_once('include/DataAccessObject.class');

/**
 *  Data Access Object for ArtifactRuleTargetValues 
 */
class ArtifactRuleTargetValuesDao extends DataAccessObject {
    /**
    * Constructs the ArtifactRuleTargetValuesDao
    * @param $da instance of the DataAccess class
    */
    function ArtifactRuleTargetValuesDao( & $da ) {
        DataAccessObject::DataAccessObject($da);
    }
    
    /**
    * Gets all tables of the db
    * @return DataAccessResult
    */
    function & searchAll() {
        $sql = "SELECT * FROM artifact_rule_target_values";
        return $this->retrieve($sql);
    }
    
    /**
    * Searches ArtifactRuleTargetValues by RuleId 
    * @return DataAccessResult
    */
    function & searchByRuleId($ruleId) {
        $sql = sprintf("SELECT value_id FROM artifact_rule_target_values WHERE rule_id = %s",
				$this->da->quoteSmart($ruleId));
        return $this->retrieve($sql);
    }

    /**
    * Searches ArtifactRuleTargetValues by ValueId 
    * @return DataAccessResult
    */
    function & searchByValueId($valueId) {
        $sql = sprintf("SELECT rule_id FROM artifact_rule_target_values WHERE value_id = %s",
				$this->da->quoteSmart($valueId));
        return $this->retrieve($sql);
    }


    /**
    * create a row in the table artifact_rule_target_values 
    * @return true or id(auto_increment) if there is no error
    */
    function create($rule_id, $value_id) {
        if (!is_array($value_id)) {
            $value_id = array($value_id);
        }
        $values = array();
        foreach($value_id as $value) {
            $values[] = '('.$this->da->quoteSmart($rule_id).', '.$this->da->quoteSmart($value).')';
        }
		$sql = sprintf("INSERT INTO artifact_rule_target_values (rule_id, value_id) VALUES %s",
				implode(', ', $values));
        $inserted = $this->update($sql);
 
        return $inserted;
    }
    
    function deleteByRuleId($ruleId) {
        $sql = sprintf("DELETE FROM artifact_rule_target_values WHERE rule_id = %s",
				$this->da->quoteSmart($ruleId));
        return $this->update($sql);
    }

}


