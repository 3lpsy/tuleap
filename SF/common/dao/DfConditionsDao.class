require_once('include/DataAccessObject.class');

/**
 *  Data Access Object for DfConditions 
 */
class DfConditionsDao extends DataAccessObject {
    /**
    * Constructs the DfConditionsDao
    * @param $da instance of the DataAccess class
    */
    function DfConditionsDao( & $da ) {
        DataAccessObject::DataAccessObject($da);
    }
    
    /**
    * Gets all tables of the db
    * @return DataAccessResult
    */
    function & searchAll() {
        $sql = "SELECT * FROM df_conditions";
        return $this->retrieve($sql);
    }
    
    /**
    * Searches DfConditions by Id 
    * @return DataAccessResult
    */
    function & searchById($id) {
        $sql = sprintf("SELECT field_id FROM df_conditions WHERE id = %s",
				$this->da->quoteSmart($id));
        return $this->retrieve($sql);
    }

    /**
    * Searches DfConditions by FieldId 
    * @return DataAccessResult
    */
    function & searchByFieldId($fieldId) {
        $sql = sprintf("SELECT id FROM df_conditions WHERE field_id = %s",
				$this->da->quoteSmart($fieldId));
        return $this->retrieve($sql);
    }


    /**
    * create a row in the table df_conditions 
    * @return true or id(auto_increment) if there is no error
    */
    function create($field_id) {
		$sql = sprintf("INSERT INTO df_conditions (field_id) VALUES (%s)",
				$this->da->quoteSmart($field_id));
        $inserted = $this->update($sql);
        if ($inserted) {
            $dar =& $this->retrieve("SELECT LAST_INSERT_ID() AS id");
            if ($row = $dar->getRow()) {
                $inserted = $row['id'];
            } else {
                $inserted = $dar->isError();
            }
        } 
        return $inserted;
    }

}


?>