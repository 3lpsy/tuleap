require_once('include/DataAccessObject.class');

/**
 *  Data Access Object for DfRulesFieldvalues 
 */
class DfRulesFieldvaluesDao extends DataAccessObject {
    /**
    * Constructs the DfRulesFieldvaluesDao
    * @param $da instance of the DataAccess class
    */
    function DfRulesFieldvaluesDao( & $da ) {
        DataAccessObject::DataAccessObject($da);
    }
    
    /**
    * Gets all tables of the db
    * @return DataAccessResult
    */
    function & searchAll() {
        $sql = "SELECT * FROM df_rules_fieldvalues";
        return $this->retrieve($sql);
    }
    
    /**
    * Searches DfRulesFieldvalues by RuleId 
    * @return DataAccessResult
    */
    function & searchByRuleId($ruleId) {
        $sql = sprintf("SELECT value_id FROM df_rules_fieldvalues WHERE rule_id = %s",
				$this->da->quoteSmart($ruleId));
        return $this->retrieve($sql);
    }

    /**
    * Searches DfRulesFieldvalues by ValueId 
    * @return DataAccessResult
    */
    function & searchByValueId($valueId) {
        $sql = sprintf("SELECT rule_id FROM df_rules_fieldvalues WHERE value_id = %s",
				$this->da->quoteSmart($valueId));
        return $this->retrieve($sql);
    }


    /**
    * create a row in the table df_rules_fieldvalues 
    * @return true or id(auto_increment) if there is no error
    */
    function create($rule_id, $value_id) {
		$sql = sprintf("INSERT INTO df_rules_fieldvalues (rule_id, value_id) VALUES (%s, %s)",
				$this->da->quoteSmart($rule_id),
				$this->da->quoteSmart($value_id));
        $inserted = $this->update($sql);
 
        return $inserted;
    }

}


?>