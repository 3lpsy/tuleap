require_once(dirname(__FILE__).'/WikiViews.class');
require_once(dirname(__FILE__).'/../lib/WikiPage.class');
require_once(dirname(__FILE__).'/../lib/WikiEntry.class');

/**
 * 
 * @package   WikiService
