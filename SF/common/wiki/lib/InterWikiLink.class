define('MAPFILE', '/home/httpd/SF/common/wiki/phpwiki/lib/interwiki.map');

$Language->loadLanguageMsg('wiki/wiki');

function get_server_url() {
  return 'http://crw2956.cro.st.com';
}

/**
 * @package WikiService
 */
class InterWikiLink {
  var $wikiname;

  function InterWikiLink($gid) {
    $this->gid = (int) $gid;

    $go = group_get_object($this->gid);
    $this->wikiname = ucfirst($go->getUnixName());
  }

  function add() {
    if($this->exist()) {
      return false;
    }

    $link = get_server_url().'/wiki/index.php?group_id='.$this->gid.'&pagename=';
    
    $line = $this->wikiname.' '.$link."\n";

    if (is_writable(MAPFILE)) {
      if (!$handle = fopen(MAPFILE, 'a')) {
	print $Language->getText('wiki_lib_interwikilink','open_err',MAPFILE);
	return FALSE;
      }
      
      // Ecrivons quelque chose dans notre fichier.
      if (fwrite($handle, $line) === FALSE) {
	print $Language->getText('wiki_lib_interwikilink','write_err',MAPFILE);
	return FALSE;
      }
            
      fclose($handle);
      
    } else {
      print $Language->getText('wiki_lib_interwikilink','open_err',MAPFILE);
    }

   
  }

  function exist() {
    $content = file(MAPFILE);
    foreach($content as $line) {
      list($name, $link) = explode(' ', $line);
      if($name === $this->wikiname) {
	return true;
      }
    }
    return false;
  }

}

