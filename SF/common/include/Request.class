class Request {
    
    function Request() {    
    }
    
    function get($variable) {
        if ($this->setted($variable)) {
            return (get_magic_quotes_gpc()?stripslashes($_REQUEST[$variable]):$_REQUEST[$variable]);
        } else {
            return false;
        }
    }
    
    function setted($variable) {
        return isset($_REQUEST[$variable]);
    }
    
    function &instance() {
        static $_request_instance;
        if (!$_request_instance) {
            $_request_instance = new Request();
        }
        return $_request_instance;
    }
}
