#!/bin/sh

# Apache must be started from the root user
if [ `whoami` != "root" ]; then
   echo "Must be root to start/stop the Apache test server"
   exit;
fi

prefix=$(dirname $0)
pidFile=$prefix/../var/run/httpd.pid

if [ ! -e $pidFile ]; then
   echo "Apache test server not running."
   exit;
fi

pid=`cat $pidFile`
echo -n "Stopping Apache test server..."
kill -TERM $pid
echo "done (pid $pid)."

