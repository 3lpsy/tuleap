{{#has_milestones}}
    <h3>{{closed_items_title}}</h3>

    {{#has_milestones_done}}
        <p>{{closed_items_intro}}</p>
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>{{title}}</th>
                </tr>
            </thead>
            <tbody>
                {{#done_collection}}
                    <tr data-artifact-id="{{id}}">
                        <td><a href="{{url}}">{{id}}</a></td>
                        <td>{{title}}</td>
                    </tr>
                {{/done_collection}}
            </tbody>
        </table>
    {{/has_milestones_done}}
    {{^has_milestones_done}}
        <p>{{closed_items_nothing_yet}}</p>
    {{/has_milestones_done}}
{{/has_milestones}}
