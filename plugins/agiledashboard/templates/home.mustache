<div id="home">

    {{# user_cant_see_anything }}
    <div class="alert ad-non-content">
        {{ user_cant_see_anything_content }}
    </div>
    {{/ user_cant_see_anything }}

    {{# scrum_activated }}

    {{# user_can_see_kanban }}
    <div class="row-fluid">
        <div class="span8 scrum-block">
    {{/ user_can_see_kanban }}

            <span class="ad-homepage-title">
                <h2>Scrum</h2>
                <a href="?action=show-top&group_id={{ group_id }}&pane=topblcontent" class="btn go-to-backlog">
                    <i class="icon-inbox"></i> {{ project_backlog }}
                </a>
            </span>
            <div class="date-bar">
                <a href="?group_id={{ group_id }}&period=past" class="{{ past_active }}">{{ past }}</a><!--
                --><a href="?group_id={{ group_id }}&period=" class="{{ now_active }}">{{ now }}</a><!--
                --><a href="?group_id={{ group_id }}&period=future" class="{{ future_active }}">{{ future }}</a>
            </div>

            <div id="home-section-user-info">
                <p>{{ user_helper }}</p>
            </div>

            <div class="row-fluid">
                {{# has_milestone_presenters }}
                    <div class="plannings span4">
                    {{# milestone_presenters }}
                        <div class="planning">
                            <h3>{{ milestone_type }}</h3>
                            <table class="table table-striped table-hover">
                                {{# milestones }}
                                <tr>
                                    <td class="name">{{ getArtifactTitle }} <a href="{{ edit_base_link }}{{ getArtifactId }}" class="backlog-item-link" data-artifact-id="{{ getArtifactId }}"><i class="icon-edit"></i></a></td>
                                    <td class="actions">
                                        <a href="?group_id={{ group_id }}&planning_id={{ getPlanningId }}&action=show&aid={{ getArtifactId }}&pane=blcontent"><i class="icon-list-ul"></i> {{ content }}</a>
                                        <a href="?group_id={{ group_id }}&planning_id={{ getPlanningId }}&action=show&aid={{ getArtifactId }}&pane=planning"><i class="icon-signin"></i> {{ planning }}</a>
                                    </td>
                                </tr>
                                {{/ milestones }}
                                {{^ milestones }}
                                    <span class="no-milestone">{{ no_milestone }}</span>
                                {{/ milestones }}
                            </table>
                        </div>
                    {{/ milestone_presenters }}
                    </div>
                    <div class="last-plannings span8">
                {{/ has_milestone_presenters }}
                {{^ has_milestone_presenters }}
                    <div class="last-plannings last-plannings-only">
                {{/ has_milestone_presenters }}

                    {{# last_level_milestone_presenters }}
                        <div class="last-planning">
                            <h3>{{ milestone_type_name }}</h3>
                            {{# milestone_summary_presenters }}
                                <div class="milestone">
                                    <div class="header">
                                        <p class="title">{{ milestone_title }} <a href="{{ edit_base_link }}{{ artifact_id }}" class="backlog-item-link" data-artifact-id="{{ artifact_id }}"><i class="icon-edit"></i></a></p>
                                        <p class="hierarchy">
                                        <i class="icon-angle-right"></i>
                                        {{# breadcrumbs }}
                                            {{# . }}
                                            {{# title }}
                                                <a href="{{ url }}">{{ title }}</a> <i class="icon-angle-right"></i>
                                            {{/ title }}
                                            {{^ title }}
                                                <a href="{{ url }}">{{ default_name }}</a> <i class="icon-angle-right"></i>
                                            {{/ title }}
                                            {{/ . }}
                                        {{/ breadcrumbs }}
                                        <p>
                                    </div>
                                    <div class="content">
                                        {{# has_burndown }}
                                            <script type="application/json" class="data-burndown-json" data-for="burndown-placeholder-{{ artifact_id }}">
                                                {{{ burndown_data }}}
                                            </script>
                                            <div id="burndown-placeholder-{{ artifact_id }}" class="milestone-burndown">
                                            </div>
                                        {{/ has_burndown }}
                                        {{^ has_burndown }}
                                            <div class="open"><span class="number">{{ count_open_backlog_items }}</span>{{ open }}</div>
                                            <div class="closed"><span class="number">{{ count_closed_backlog_items }}</span>{{ closed }}</div>
                                        {{/ has_burndown }}
                                    </div>
                                    <div class="footer">
                                        <a href="?group_id={{ group_id }}&planning_id={{ planning_id }}&action=show&aid={{ artifact_id }}&pane=blcontent"><i class="icon-list-ul"></i> {{ content }}</a>
                                        {{# has_cardwall }}
                                            <a href="?group_id={{ group_id }}&planning_id={{ planning_id }}&action=show&aid={{ artifact_id }}&pane=cardwall"><i class="icon-th-large"></i> {{ cardwall }}</a>
                                        {{/ has_cardwall }}
                                    </div>
                                </div>
                            {{/ milestone_summary_presenters }}
                            {{^ milestone_summary_presenters }}
                                <span class="no-milestone">{{ no_milestone }}</span>
                            {{/ milestone_summary_presenters }}
                            <div style="clear: both;"></div>
                        </div>
                    {{/ last_level_milestone_presenters }}
                </div>
            </div>
        </div>
    {{/ scrum_activated }}

    {{# user_can_see_kanban }}
        <div class="{{# scrum_activated }}span4{{/ scrum_activated }} kanban-block">
            <span class="ad-homepage-title">
                <h2><i class="icon-beaker"></i> Kanban</h2>
                {{# user_is_admin }}
                <a href="#add-kanban-modal" data-toggle="modal" class="btn add-kanban">
                    <i class="icon-plus"></i> {{ add_kanban }}
                </a>
                {{/ user_is_admin }}
            </span>

            <div class="kanban-home-ad">
                {{# kanban_summary_presenters }}
                <div class="milestone">
                    <div class="header">
                        <p class="title">{{ name }} </p>
                    </div>
                    <div class="content">
                        <div class="open"><span class="number">{{ count_open_kanban_items }}</span>{{ open }}</div>
                        <div class="closed"><span class="number">{{ count_closed_kanban_items }}</span>{{ closed }}</div>
                    </div>
                    <div class="footer">
                        <a href="?group_id={{ group_id }}&action=showKanban"><i class="icon-th-large"></i> {{ cardwall }}</a>
                    </div>
                </div>
                {{/ kanban_summary_presenters }}
            </div>
        </div>

        <div id="add-kanban-modal"
                class="modal hide fade"
                tabindex="-1"
                role="dialog"
                aria-labelledby="myModalLabel"
                aria-hidden="true"
        >
            <div class="modal-header">
                <h3> {{ add_kanban_modal_title }}</h3>
            </div>

            <form action="?group_id={{ group_id }}&action=createKanban" method="post" class="form-horizontal">
                <div class="modal-body">
                    <ol>
                        <li class="kanban-modal-element">
                             <div class="control-group">
                                <label class="control-label" for="kanban-name">{{ kanban_name_label }}</label>
                                <div class="controls">
                                    <input type="text" id="kanban-name" name="kanban-name" placeholder="Name" required>
                                </div>
                            </div>
                        </li>
                        <li class="kanban-modal-element">
                            <div class="control-group">
                                <label class="control-label" for="tracker-kanban">{{ tracker_kanban_label }}</label>
                                <div class="controls">
                                    <select id="tracker-kanban" name="tracker-kanban">
                                        {{# trackers }}
                                        <option value="{{ id }}" {{# used }} disabled {{/ used }}> {{ name }} </option>
                                        {{/ trackers }}
                                    </select>
                                </div>
                            </div>
                        </li>
                    </ol>
                </div>

                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true"> {{ btn_close_label }} </button>
                    <input type="submit" class="btn btn-primary" name="add-keys" value="{{ btn_add_modal_label }}">
                </div>
            </form>
        </div>

    </div>
    {{/ user_can_see_kanban }}
</div>
