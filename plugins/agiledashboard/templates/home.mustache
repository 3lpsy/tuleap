<div id="home">
    <div class="row-fluid">
        <div class="backlog span12">
            <a href="#">
                <h1>Tuleap backlog</h1>
            </a>
        </div>
    </div>

    <div class="date-bar">
        <a href="#">Passed</a><a href="#" class="active">What's hot</a><a href="#">What's next</a>
    </div>

    <div class="row-fluid">
        <div class="plannings span4">
        {{# milestone_presenters }}
            <div class="planning">
                <h3>{{ milestone_type }} :</h3>
                <table class="table table-striped table-hover">
                    {{# milestones }}
                    <tr>
                        <td class="name">{{ getArtifactTitle }}</td>
                        <td class="actions">
                            <a href="?group_id={{ group_id }}&planning_id={{ getPlanningId }}&action=show&aid={{ getArtifactId }}&pane=blcontent"><i class="icon-list-ul"></i> {{ content }}</a>
                            <a href="?group_id={{ group_id }}&planning_id={{ getPlanningId }}&action=show&aid={{ getArtifactId }}&pane=planning"><i class="icon-signin"></i> {{ planning }}</a>
                        </td>
                    </tr>
                    {{/ milestones }}
                </table>
            </div>
        {{/ milestone_presenters }}
        </div>

        <div class="last-plannings span8">
            <div class="last-planning">
                <h3>{{ last_milestone_type }} :</h3>

                {{# milestone_summary_presenters }}
                <div class="milestone">
                    <div class="header">
                        <p class="title">{{ milestone_title }}</p>
                        <p class="hierarchy">
                        {{# breadcrumbs }}
                            {{# . }}
                                {{ title }} <i class="icon-angle-right"></i>
                            {{/ . }}
                        {{/ breadcrumbs }}
                        <p>
                    </div>
                    <div class="content">
                        {{# has_burndown }}
                            <script type="application/json" class="data-burndown-json" data-for="burndown-placeholder-{{ artifact_id }}">
                                {{{ burndown_data }}}
                            </script>
                            <div id="burndown-placeholder-{{ artifact_id }}">
                            </div>
                        {{/ has_burndown }}
                        {{^ has_burndown }}
                            {{ count_open_backlog_items }} {{ open }} |
                            {{ count_closed_backlog_items }} {{ closed }}
                        {{/ has_burndown }}
                    </div>
                    <div class="footer">
                        <a href="?group_id={{ group_id }}&planning_id={{ planning_id }}&action=show&aid={{ artifact_id }}&pane=blcontent"><i class="icon-list-ul"></i> {{ content }}</a>
                        {{# has_cardwall }}
                            <a href="?group_id={{ group_id }}&planning_id={{ planning_id }}&action=show&aid={{ artifact_id }}&pane=cardwall"><i class="icon-th-large"></i> {{ cardwall }}</a>
                        {{/ has_cardwall }}
                    </div>
                </div>
                {{/ milestone_summary_presenters }}
            </div>
        </div>
    </div>
</div>