<div class="alert alert-info">
    <span class="lab_features">{{{lab}}}</span>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="">
            <p>{{help_intro}}</p>
            <ul>
                <li>{{help_left}}</li>
                <li>{{help_right}}</li>
            </ul>
            <p>{{help_dnd}}</p>
        </div>
        <font color="red"><b style="">Dear front end team, use {can_plan} to prevent unauthorized people to drag 'n drop from backlog to submilestone</font></b>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="agiledashboard-planning-backlog" data-milestone-planning-id="{{milestone_planning_id}}" data-milestone-id="{{milestone_id}}">
            <table class="table table-striped table-hover table-bordered submilestone-element-rows">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{title}}</th>
                        <th>{{points}}</th>
                        <th>{{parent}}</th>
                        <th>{{header_status}}</th>
                    </tr>
                </thead>
                <tbody class="">
                    {{#backlog_collection}}
                        <tr data-artifact-id="{{id}}" class="submilestone-element">
                            <td><a href="{{url}}">{{id}}</a></td>
                            <td>{{title}}</td>
                            <td class="submilestone-element-capacity">{{points}}</td>
                            <td><a href="{{parent_url}}">{{parent_title}}</a></td>
                            <td>{{status}}</td>
                        </tr>
                    {{/backlog_collection}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="span6 agiledashboard-planning-submilestones">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>{{list_of_submilestone_title}}</th>
                    <th class="agiledashboard-planning-submilestones-addnew">
                        {{#can_add_submilestone}}
                            <a href="{{add_new_submilestone_url}}" class="btn btn-small">{{add_new_submilestone}}</a>
                        {{/can_add_submilestone}}
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#submilestone_collection}}
                    <tr class="agiledashboard-planning-submilestone-header">
                        <th>
                            <a href="{{milestone_url}}"><i class="icon-chevron-right"></i> {{milestone_title}}</a>
                        </th>
                        <th class="agiledashboard-planning-submilestone-header-info">
                            {{#display_milestone_dates}}{{start_date}} â€“ {{end_date}}{{/display_milestone_dates}}
                            <span class="label">{{status}}</span>
                        </th>
                    </tr>
                    <tr>
                        <td colspan=2>
                            <div data-loaded="false" class="submilestone-data" data-submilestone-id="{{id}}" data-planning-id="{{planning_id}}">
                                <p>Capacity: <span class="submilestone-capacity"></span></p>
                                <table class="table table-striped table-hover table-bordered submilestone-element-rows">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>{{title}}</th>
                                            <th>{{points}}</th>
                                            <th>{{parent}}</th>
                                            <th>{{header_status}}</th>
                                        </tr>
                                    </thead>
                                    <tbody class="">
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                {{/submilestone_collection}}
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript" src="/plugins/agiledashboard/js/milestone-planning.js"></script>
