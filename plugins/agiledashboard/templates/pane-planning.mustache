<div class="alert alert-info">
    <span class="lab_features">{{{lab}}}</span>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="well">
            <p>{{help_intro}}
            <ul>
                <li>{{help_left}}</li>
                <li>{{help_right}}</li>
            </ul>
            {{help_dnd}}
            </p>
        </div>
    </div>
</div>
{{^can_plan}}<font color="pink"><b style="background:green">Dear front end team, use {can_plan} to prevent unauthorized people to drag 'n drop from backlog to submilestone</font></b>{{/can_plan}}

{{#can_add_submilestone}}
<div class="row-fluid">
    <div class="span12" style="text-align:right;">
        <p><a href="{{add_new_submilestone_url}}" class="btn">{{add_new_submilestone}}</a></p>
    </div>
</div>
{{/can_add_submilestone}}

<div class="row-fluid">
    <div class="span6">
        <h3>{{backlog_title}}</h3>
        <div class="agiledashboard-planning-backlog" data-milestone-planning-id="{{milestone_planning_id}}" data-milestone-id="{{milestone_id}}">
            <table class="table table-striped table-hover table-bordered submilestone-element-rows">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>{{title}}</th>
                        <th>{{points}}</th>
                        <th>{{parent}}</th>
                    </tr>
                </thead>
                <tbody class="">
                    {{#backlog_collection}}
                        <tr data-artifact-id="{{id}}" class="submilestone-element">
                            <td><a href="{{url}}">{{id}}</a></td>
                            <td>{{title}}</td>
                            <td class="submilestone-element-capacity">{{points}}</td>
                            <td><a href="{{parent_url}}">{{parent_title}}</a></td>
                        </tr>
                    {{/backlog_collection}}
                </tbody>
            </table>
        </div>
    </div>

    <div class="span6">
        <h3>{{list_of_submilestone_title}}</h3>
        <div class="agiledashboard-planning-submilestones">
            <div id="accordion">
                <table class="table table-bordered table-striped">
                {{#submilestone_collection}}
                    <tr class="agiledashboard-planning-submilestone-header">
                        <th>
                            <a href="{{milestone_url}}"><i class="icon-chevron-right"></i> {{milestone_title}}</a>
                        </th>
                        <th class="agiledashboard-planning-submilestone-header-info">
                            {{#display_milestone_dates}}{{start_date}} â€“ {{end_date}}{{/display_milestone_dates}} <span class="label {{#is_open}}label-success{{/is_open}}">{{status}}</span>
                        </th>
                    </tr>
                    <tr>
                        <td colspan=2>
                            <div data-loaded="false" class="submilestone-data" data-submilestone-id="{{id}}" data-planning-id="{{planning_id}}">
                                <p>Capacity: <span class="submilestone-capacity"></span></p>
                                <table class="table table-striped table-hover table-bordered submilestone-element-rows">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>{{backlog_item_title}}</th>
                                            <th>{{points}}</th>
                                            <th>{{parent}}</th>
                                        </tr>
                                    </thead>
                                    <tbody class="">
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                {{/submilestone_collection}}
                </table>
            </div>
        </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/plugins/agiledashboard/js/planning-view.js"></script>
<script type="text/javascript" src="/plugins/agiledashboard/js/milestone-planning.js"></script>
