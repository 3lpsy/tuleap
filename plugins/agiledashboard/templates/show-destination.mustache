{{#getPlannedArtifactsTree}}
    <div id="art-{{getId}}" class="release_planner card {{planningDroppableClass}}">
        {{#getCardPresenter}}
            {{> card-actions}}
        {{/getCardPresenter}}
        {{> select-destination}}
        <hr />
        <p class="help">{{plannedArtifactsHelp}}</p>
        {{^canDrop}}
            {{{errorCantDrop}}}
        {{/canDrop}}
        {{#canDrop}}
            <div class="milestone-content">
                {{^hasChildren}}
                    No items yet
                    <ul class="cards" style="height:1.5em; line-height:1.5em;"></ul>
                {{/hasChildren}}
                {{#hasChildren}}
                    {{> cards}}
                {{/hasChildren}}
                {{#hasSubMilestones}}
                    <hr />
                    <ul>
                        {{#getSubMilestones}}
                            <li><a href="{{getUri}}">{{getXRef}} - {{getTitle}}</a></li>
                        {{/getSubMilestones}}
                    </ul>
                {{/hasSubMilestones}}
            </div>
        {{/canDrop}}
    </div>
{{/getPlannedArtifactsTree}}
<div style="clear: both"></div>
