<div class="agiledashboard">
    <h2>Edit</h2>
    <form method="post" action="/plugins/agiledashboard/?group_id={{group_id}}&amp;planning_id={{planningId}}&amp;action=update">
        <p>
            <label for="planning[name]">{{planningNameFieldLabel}}</label><br />
            <input type="text" name="planning[name]" id="planning_name" value="{{planningName}}" />
        </p>
        <p>
            <label for="planning[backlog_title]">{{planningBacklogTitleFieldLabel}}</label><br />
            <input type="text" name="planning[backlog_title]" id="planning_backlog_title" value="{{planningBacklogTitle}}" />
        </p>
        <p>
            <label for="planning[plan_title]">{{planningPlanTitleFieldLabel}}</label><br />
            <input type="text" name="planning[plan_title]" id="planning_plan_title" value="{{planningPlanTitle}}" />
        </p>
        <p>
            {{#__}}planning-allows-assignment||{{/__}}
            <select name="planning[backlog_tracker_id]" style="vertical-align: top;">
                {{#available_backlog_trackers}}
                    <option value="{{getId}}" {{selectedIfBacklogTracker}}>{{getName}}</option>
                {{/available_backlog_trackers}}
            </select>
            <select name="planning[planning_tracker_id]">
                <option value=""/>
                {{#available_planning_trackers}}
                    <option value="{{getId}}" {{selectedIfPlanningTracker}}>{{getName}}</option>
                {{/available_planning_trackers}}
            </select>
        </p>
        <p>
            <input type="submit" value="{{btnSubmit}}"/>
        </p>
    </form>
</div>
