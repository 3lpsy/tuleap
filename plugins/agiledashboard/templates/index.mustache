{{#hasShortAccess}}
<ul class="ad_index_plannings">
    {{#getShortAccess}}
    <li class="ad_index_planning">
        <div class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <h2>{{#planning}}{{getName}}{{/planning}} <b class="caret"></b></h2>
            </a>
            <ul class="dropdown-menu">
                <!-- TODO: do not hard code url? -->
                <li><a href="/plugins/tracker/?tracker={{planningTrackerId}}&func=new-artifact-link&id=0&immediate=1">{{createNewItemToPlan}}</a></li>
            </ul>
        </div>
        <ul>
            {{#getLastTenOpenArtifacts}}
            <li>
                <div class="ad_index_planning_icons">
                    <a href="{{getUri}}"><img title="" src ="{{plugin_theme_path}}/images/sticky-notes-stack.png"></a>
                    {{#additionalPanes}}
                        <a href="{{getUri}}&pane={{getIdentifier}}"><img title="{{getIconTitle}}" src ="{{getIcon}}"></a>
                    {{/additionalPanes}}
                </div>
                <!-- TODO: add direct link to artifact + return to AD homepage -->
                {{getTitle}}{{^getTitle}}{{getXRef}}{{/getTitle}}
            </li>
            {{/getLastTenOpenArtifacts}}
        </ul>
    </li>
    {{/getShortAccess}}
</ul>

    {{#getLatestLeafMilestone}}
            {{#additionalPanes}}
                <h2> {{getTitle}} </h2>
                <div>
                    {{{getMinimalContent}}}
                </div>
            {{/additionalPanes}}
 
    {{/getLatestLeafMilestone}}

{{/hasShortAccess}}
{{^hasShortAccess}}
<p>
    <em>Nothing has been setup yet. Please come again later!</em>
</p>
{{/hasShortAccess}}
