<h3>{{ backlog_item_type }}</h3>

<table class="table">
    <thead>
    <tr>
        <th>{{# dgettext }} tuleap-agiledashboard | Item {{/ dgettext }}</th>
        {{# has_something_inconsistent }}
            <th></th>
        {{/ has_something_inconsistent }}
        <th>{{ status_title }}</th>
        <th>{{# dgettext }} tuleap-agiledashboard | Parent item {{/ dgettext }}</th>
    </tr>
    </thead>
    <tbody>
    {{# has_something }}
        {{# items_collection }}
            <tr data-artifact-id="{{ id }}">
                <td {{^ isOpen }} class="agiledashboard-milestone-details-items-list-is-closed" {{/ isOpen }}>
                    <a href="{{ url }}">
                        <span class="planning-view-items-list-content-badge badge tlp-badge-outline tlp-badge-{{color}}">
                            {{ xRef }}
                        </span>
                        {{ title }}
                    </a>
                </td>
                {{# has_something_inconsistent }}
                    <td {{^ isOpen }} class="agiledashboard-milestone-details-items-list-is-closed" {{/ isOpen }}>
                        {{# isInconsistent }}
                            <i class="text-warning icon-warning-sign" title="{{ item_is_inconsistent_label }}"></i>
                        {{/ isInconsistent }}
                    </td>
                {{/ has_something_inconsistent }}
                <td {{^ isOpen }} class="agiledashboard-milestone-details-items-list-is-closed" {{/ isOpen }}>{{ getStatus }}</td>
                <td class="milestone-element-parent {{^ isOpen }} agiledashboard-milestone-details-items-list-is-closed {{/ isOpen }}" >
                    <a href="{{ parent_url }}">{{ parent_title }}</a>
                </td>
            </tr>
        {{/ items_collection }}
    {{/ has_something }}
    {{^ has_something }}
        <tr>
            <td colspan="3" class="table-cell-empty">{{ no_items_label }}</td>
        </tr>
    {{/ has_something}}
    </tbody>
</table>
