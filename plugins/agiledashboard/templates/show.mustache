<div class="tlp-framed-vertically">
    <h1 class="tlp-framed-horizontally">
        <div class="tlp-dropdown">
            <div id="agiledashboard-scrum-milestone-menu">
                {{ milestoneTitle }}
                <i class="fa fa-fw fa-caret-down" id="agiledashboard-scrum-milestone-menu-caret"></i>
            </div>
            <div class="tlp-dropdown-menu" role="menu">
                <a href="{{ editArtifactUrl }}"
                   class="backlog-item-link tlp-dropdown-menu-item"
                   data-artifact-id="{{ milestoneId }}"
                   role="menuitem"
                >
                    {{ editArtifact }}
                </a>
                <span class="tlp-dropdown-menu-separator" role="separator"></span>
                {{# selectableArtifacts }}
                    <a href="{{ url }}" class="tlp-dropdown-menu-item" role="menuitem">{{{ title }}}</a>
                {{/ selectableArtifacts }}
            </div>
        </div>
        {{# displayMilestoneDates }}
            <small>
                {{startDate}} â€“ {{endDate}}
            </small>
        {{/ displayMilestoneDates }}
    </h1>

    {{> pane-list }}
</div>

