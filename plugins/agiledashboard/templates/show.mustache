<div class="agiledashboard">
    <div class="dropdown">
        <h2 class="dropdown-toggle" data-toggle="dropdown">{{milestoneTitle}} <b class="caret"></b></h2>
        <ul class="dropdown-menu">
            {{#selectableArtifacts}}
            <li><a href="{{url}}">{{{title}}}</a></li>
            {{/selectableArtifacts}}
            <li class="divider"></li>
            <li><a href="{{createNewItemToPlanUrl}}">{{createNewItemToPlan}}</a></li>
        </ul>
    </div>
    <ul class="nav nav-tabs">
        {{#additionalPanes}}
            <li class="{{#isActive}}active{{/isActive}}">
                <a href="{{getUri}}">{{getTitle}}</a>
            </li>
        {{/additionalPanes}}
    </ul>
    <div class="tab-content">
        {{#additionalPanes}}
            <div id="{{getIdentifier}}" class="tab-pane {{#isActive}}active{{/isActive}}">
                {{#isActive}}
                    {{{getFullContent}}}
                {{/isActive}}
            </div>
        {{/additionalPanes}}
    </div>
</div>

