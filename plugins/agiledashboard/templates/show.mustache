<div class="agiledashboard">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#planner" data-toggle="tab">{{planningName}}</a>
        </li>
        {{#hasSelectedArtifact}}
            {{#additionalPanes}}
                <li>
                    <a href="#{{identifier}}" data-toggle="tab">{{title}}</a>
                </li>
            {{/additionalPanes}}
        {{/hasSelectedArtifact}}
    </ul>
    <div class="tab-content">
        <table cellspacing="5" id="planner" class="tab-pane active">
            <tbody>
                <tr valign="top">
                    <td width="50%">
                        <div class="planning-backlog">
                            <h3>{{planningBacklogTitle}}</h3>
                            {{{backlogSearchView}}}
                        </div>
                    </td>
                    <td>
                        <h3>{{planningPlanTitle}}</h3>
                        {{^hasSelectedArtifact}}
                            {{> select-destination}}
                        {{/hasSelectedArtifact}}
                        {{#hasSelectedArtifact}}
                            {{> show-destination}}
                        {{/hasSelectedArtifact}}
                    </td>
                </tr>
            </tbody>
        </table>
        {{#hasSelectedArtifact}}
            {{#additionalPanes}}
                <div id="{{identifier}}" class="tab-pane">
                    {{{content}}}
                </div>
            {{/additionalPanes}}
        {{/hasSelectedArtifact}}
    </div>
</div>

