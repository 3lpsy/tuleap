{{#has_something}}
    {{#has_something_todo}}
        <h3>{{open_items_title}}</h3>
        <p>{{open_items_intro}}</p>
        <div class="row-fluid">
        <table class="table table-striped table-hover table-bordered span8">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>{{type}}</th>
                    <th>{{title}}</th>
                    <th>{{points}}</th>
                    <th>{{parent}}</th>
                </tr>
            </thead>
            <tbody class="{{#can_prioritize}}milestone-content-open-rows{{/can_prioritize}}">
                {{#todo_collection}}
                    <tr data-artifact-id="{{id}}">
                        <td><a href="{{url}}">{{id}}</a></td>
                        <td><span class="label">{{type}}</span></td>
                        <td>{{title}}</td>
                        <td>{{points}}</td>
                        <td><a href="{{parent_url}}">{{parent_title}}</a></td>
                    </tr>
                {{/todo_collection}}
            </tbody>
        </table>
        </div>
    {{/has_something_todo}}
{{/has_something}}
