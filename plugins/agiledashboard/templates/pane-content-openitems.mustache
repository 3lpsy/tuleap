{{#has_something}}
    {{#has_something_todo}}
        <h3>{{open_items_title}}</h3>
        <p>{{open_items_intro}}</p>
        <div class="row-fluid">
            <div class="span10 agiledasboard-content-open-items">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>{{type}}</th>
                            <th>{{title}}</th>
                            <th>{{points}}</th>
                            <th>{{parent}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#todo_collection}}
                            <tr data-artifact-id="{{id}}">
                                <td><a href="{{url}}" class="backlog-item-link" data-artifact-id="{{id}}">{{id}}</a></td>
                                <td><span class="{{ color }} xref-in-title label">{{type}}</span></td>
                                <td class="milestone-element-title">{{title}}</td>
                                <td>{{points}}</td>
                                <td class="milestone-element-parent"><a href="{{parent_url}}" class="backlog-item-link" data-artifact-id="{{parent_id}}">{{parent_title}}</a></td>
                            </tr>
                        {{/todo_collection}}
                    </tbody>
                </table>
            </div>
        </div>
    {{/has_something_todo}}
{{/has_something}}
