<table style="display: none" id="trigger_triggering_fields_template">
    <tbody>
        <tr class="trigger_triggering_field" data-trigger-condition-initial="false">
            <td class="trigger_condition_selector">
                <span class="trigger_condition_artifact_operator_updater"></span>
            </td>
            <td>
                {{condition_of_type}}
                <select class="trigger_triggering_field_child_tracker_name">
                    <option selected="selected" value="">{{condition_select_tracker_name}}</option>
                </select>
                <span class="trigger_triggering_have_field"></span>
                <select class="trigger_triggering_field_child_tracker_field_name">
                    <option selected="selected" value="">{{condition_select_tracker_field}}</option>
                </select>
                {{condition_set_to}}
                <select class="trigger_triggering_field_child_tracker_field_value">
                    <option selected="selected" value="">{{condition_select_tracker_field_value}}</option>
                </select>
                <img border="0" alt="remove" src="/themes/common/images/ic/cross.png" class="trigger_triggering_field_remove">
            </td>
        </tr>
    </tbody>
</table>
<div style="display: none" id="trigger_quantity_template">
    {{new_trigger_triggering_field_list_intro}} <select id="trigger_condition_quantity">
    </select>
</div>