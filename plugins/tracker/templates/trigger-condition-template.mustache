<table style ="display: none" id="trigger_condition_template">
    <tbody>
        <tr class="trigger_condition" style ="padding-bottom: 5px" data-trigger-condition-initial="false">
            <td>
                <span class="trigger_condition_artifact_quantity_updater" style="color: #999999;"></span>
            </td>
            <td>
                <select class="trigger_condition_child_tracker_name">
                    <option selected="selected" value="">select child tracker name</option>
                </select>
                <select class="trigger_condition_child_tracker_field_name">
                    <option selected="selected" value="">{{condition_select_tracker_field}}</option>
                </select>
                {{equals}}
                <select class="trigger_condition_child_tracker_field_value">
                    <option selected="selected" value="">{{condition_select_tracker_field_value}}</option>
                </select>
                <img border="0" alt="remove" src="/themes/Tuleap/images/ic/cross.png" style="position:relative; bottom: -5px;" class="trigger_condition_remove">
            </td>
        </tr>
    </tbody>
</table>
<div style ="display: none" id="trigger_quantity_template">
    <select id="trigger_condition_quantity">
    </select>
</div>
<div style ="display: none" id="trigger_template">
    <div class="trigger_description" style="margin-bottom: 5px; background-color: #D8E7EE; float: left">
        {{new_trigger_condition_list_intro}}
        <div class="trigger_description_conditions">
        </div>
        <p class="trigger_description_target">
            {{new_trigger_target_intro}}
            <em><span class="trigger_description_target_field_name"></span></em> =
            <em><span class="trigger_description_target_field_value"></span></em>
        </p>
        <img border="0" alt="remove" src="/themes/Tuleap/images/ic/cross.png" style="float: right; cursor: pointer;" class="trigger_remove">
    </div>
</div>
<div id ="trigger_template_condition" style ="display: none">
    <p class="trigger_description_condition">
        <span class="trigger_description_condition_operator"></span> 
        <span class="trigger_description_condition_quantity"></span>
        <em><span class="trigger_description_condition_tracker"></span></em>
        <em><span class="trigger_description_condition_field_name"></span></em> =
        <em><span class="trigger_description_condition_field_value"></span></em>
    </p>
</div>