<div class="tuleap-modal-background">
    {{{javascript_files}}}
</div>
<div class="tuleap-modal">
    <div class="tuleap-modal-side-panel">
        <div class="tuleap-modal-side-panel-grip">
            <span>{{ artifact_links_title }}</span>
        </div>
        <div class="tuleap-modal-side-panel-content">
            <div class="tuleap-modal-side-panel-content-title">
                <h3>{{ artifact_links_title }}</h3>
            </div>
            <div class="tuleap-modal-side-panel-content-content">
                <div class="alert alert-info">{{{ artifact_links_readonly }}}</div>
                <ul class="tracker_artifact_links">
                {{# artifact_links }}
                    <li>
                        <a href="/goto?key={{tracker_name}}&val={{artifact_id}}'&group_id={{group_id}}" class="cross-reference">#{{artifact_id}} {{title}}</a>
                    </li>
                {{/ artifact_links }}
                {{^ artifact_links }}
                    <li class="empty-state">
                        {{ no_artifact_links }}
                    </li>
                {{/ artifact_links }}
                </ul>
            </div>
            <div class="tuleap-modal-side-panel-content-actions">
            </div>
        </div>
    </div>

    <div class="tuleap-modal-main-panel">
        <div class="tuleap-modal-title">
            <i class="icon-remove tuleap-modal-close"></i>
            <h3>{{ artifact_title }}</h3>
        </div>
        <div class="tuleap-modal-content">
            <form action="{{ submit_url }}" method="POST" enctype="multipart/form-data">
                <div>
                    <table cellspacing="0" cellpadding="0" border="0">
                        <tr valign="top">
                            <td>
                                {{{ form_elements }}}
                            </td>
                        </tr>
                    </table>
                </div>
                <input type="hidden" value="67108864" name="max_file_size" />
                <input type="hidden" id="artifact_informations" 
                       data-artifact-id="{{ artifact_id }}"
                       data-changeset-id="{{ last_changeset_id }}"/>
                <input type="hidden" name="from_overlay" value="1">
            </form>
            {{{ javascript_rules }}}
        </div>
        <div class="tuleap-modal-actions">
            <a id="tuleap-modal-submit" class="btn btn-primary">Submit</a>
            <a class="btn tuleap-modal-close">Cancel</a>
        </div>
    </div>

    <div class="tuleap-modal-side-panel">
        <div class="tuleap-modal-side-panel-grip">
            <span>{{ followups_title }}</span>
        </div>
        <div class="tuleap-modal-side-panel-content">
            <div class="tuleap-modal-side-panel-content-title">
                <h3>{{ followups_title }}</h3>
            </div>
            <div class="tuleap-modal-side-panel-content-content">
                {{{ follow_ups }}}
            </div>
            <div class="tuleap-modal-side-panel-content-actions">
            </div>
        </div>
    </div>
</div>
