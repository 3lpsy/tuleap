<div class="dashboard-widget-content-cross-tracker"
     data-report-id="{{ report_id }}"
     data-locale="{{ locale }}"
     data-date-format="{{ date_format }}"
>
    <div class="dashboard-widget-content-cross-tracker-error">
        <div class="tlp-alert-danger">
        </div>
    </div>
    <div class="dashboard-widget-content-cross-tracker-success">
        <div class="tlp-alert-info">
        </div>
    </div>

    {{> project-cross-tracker-search-writing-mode }}
    {{> project-cross-tracker-search-reading-mode }}
    <div class="dashboard-widget-content-cross-tracker-loading shown"></div>
    {{> project-cross-tracker-search-results }}
</div>
