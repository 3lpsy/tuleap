<h2>Edit children</h2>
<form method="post" action="{{getTrackerUrl}}/?tracker={{getTrackerId}}&func=admin-hierarchy-update">
    <select name="children[]" multiple="multiple">
        {{#getPossibleChildren}}
            <option value="{{id}}" {{selected}}>{{name}}</option>
        {{/getPossibleChildren}}
    </select>
    <input type="submit" value="{{getSubmitLabel}}">
</form>

<h2>Current Full Hierarchy</h2>
{{#hierarchy}}
    {{> tracker-node}}
{{/hierarchy}}
