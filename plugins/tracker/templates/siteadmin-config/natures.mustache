<h2>{{ title }}</h2>

{{# sections }}
    <ul class="nav nav-tabs">
        <li>
            <a href="{{ emailgateway_url }}">{{ emailgateway }}</a>
        </li>
        <li class="active">
            <a href="{{ natures_url }}">{{ natures }}</a>
        </li>
    </ul>
{{/ sections }}

<div id="siteadmin-config">
    <legend>{{ available_natures }}</legend>
    <p class="muted">{{ desc }}</p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>{{ shortname }}</th>
                <th>{{ forward_label }}</th>
                <th>{{ reverse_label }}</th>
            </tr>
        </thead>
        <tbody>
            {{# natures }}
                <tr>
                    <td>{{ shortname }}</td>
                    <td>{{ forward_label }}</td>
                    <td>{{ reverse_label }}</td>
                </tr>
            {{/ natures }}
        </tbody>
    </table>

    <a class="btn" role="button" data-toggle="modal" href="#siteadmin-config-natures-modal">
        <i class="icon-plus"></i> {{ create_new_nature }}
    </a>

    {{> siteadmin-config/natures-modal }}
</div>
