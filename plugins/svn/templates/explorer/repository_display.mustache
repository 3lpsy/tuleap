<h2>{{ repository_name }}</h2>

<p class="form-inline">
    <input type="text" class="span6" size="125" value="{{ svn_url }}" />

    {{# is_user_admin }}
        <a href="{{ settings_url }}" class="btn">
            <i class="icon-cog"></i>
            Settings
        </a>
    {{/ is_user_admin }}
</p>

{{# is_repository_created }}

    <p>{{ help_message }}</p>
    <div class="svn-intro-command">
        <pre>{{ help_command }}</pre>
    </div>

    {{{ viewvc_html }}}

{{/ is_repository_created }}
{{^ is_repository_created }}

    <div class="alert alert-info">
        {{ repository_not_created }}
    </div>

{{/ is_repository_created }}
