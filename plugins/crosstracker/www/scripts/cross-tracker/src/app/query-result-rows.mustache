{{# artifacts.length }}
    {{# artifacts }}
        <tr>
            <td>
                <a class="direct-link-to-artifact" href="{{ badge.uri }}">
                    <span class="tlp-badge-outline tlp-badge-{{ badge.color }} dashboard-widget-content-cross-tracker-link-to-tracker-badge">
                        {{ badge.cross_ref }}
                    </span>{{ title }}
                </a>
            </td>
            <td>{{ status }}</td>
            <td>{{ formatted_last_update_date }}</td>
            <td><a href="{{ submitted_by.user_url }}">{{ submitted_by.display_name }}</a></td>
            <td>
                {{# assigned_to }}
                    <a href="{{ user_url }}">{{ display_name }}</a>
                {{/ assigned_to }}
            </td>
        </tr>
    {{/ artifacts }}
{{/ artifacts.length }}
