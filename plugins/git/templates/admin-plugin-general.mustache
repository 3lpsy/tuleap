<h3>{{ access_control_title }}</h3>

<form method="POST"
      action="?pane=general-settings&action=enable-regexp-usage"
      class="admin_mirror_config form-horizontal"
>
    {{# csrf_token }}
        {{> csrf_token_input }}
    {{/ csrf_token }}
    <div class="control-group">
        <input type="checkbox"
            name="activate-regexp"
            {{# is_activated }} checked="checked" {{/ is_activated }}
        > {{ allow_regexp_info }}
    </div>

    <input value="{{ save_settings }}"
           class="btn btn-primary"
           type="submit"
    >
</form>
