<div id="revoke-modal" class="modal hide fade">
    <div class="modal-header">
        <h3>{{ mirror_allowed_project_revoke_title }}</h3>
    </div>
    <div class="modal-body">
        <p>{{ mirror_allowed_project_revoke_description }}</p>
    </div>
    <div class="modal-footer">
        <button id="revoke-confirm" class="btn btn-danger">{{ mirror_allowed_project_revoke_yes }}</button>
        <button data-dismiss="modal" class="btn">{{ mirror_allowed_project_revoke_no }}</button>
    </div>
</div>

<h1>{{ mirror_allowed_project_title }}</h1>

<form id="allowed-projects-all-form" action="{{ restricted_mirror_action }}" method="POST">
    {{{ csrf_input }}}

    <label for="allowed-projects-all-allowed" class="checkbox">
        <input type="checkbox" id="allowed-projects-all-allowed" name="all-allowed" value="1" {{^ is_mirror_restricted }}checked{{/ is_mirror_restricted }}> {{{ mirror_allowed_project_allow_all }}}
    </label>

    <input type="submit" id="allowed-projects-all-allowed-state" class="btn btn-primary" value="{{ mirror_allowed_project_allow_all_submit }}">
</form>

{{# is_mirror_restricted }}
<div id="allowed-projects-list">
    <h2>{{ mirror_allowed_project_list }}</h2>

    <form id="projects-allowed-form" action="{{ update_allowed_projects_action }}" method="POST">
        <div id="allowed-projects-list-actions">
            {{{ csrf_input }}}

            <div id="project-to-allow-autocompleter" class="input-append">
                <input id="project-to-allow" name="project-to-allow" type="text" placeholder="{{ mirror_allowed_project_list_allow_placeholder }}">
                <button type="submit" name="allow-project" class="btn btn-primary" value="1">
                    <i class="icon-ok-sign icon-white"></i> {{ mirror_allowed_project_list_allow_project }}
                </button>
            </div>

            <button id="revoke-project" class="btn btn-danger" disabled>
                <i class="icon-minus-sign icon-white"></i> {{ mirror_allowed_project_list_revoke_projects }}
            </button>

            <div class="input-prepend filter">
                <span class="add-on">&#xf002;</span>
                <input type="text" id="filter-projects" placeholder="{{ mirror_allowed_project_list_filter_placeholder }}" {{# there_is_no_project }}disabled{{/ there_is_no_project }}>
            </div>
        </div>

        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="checkbox-cell"><input type="checkbox" id="check-all"></th>
                    <th class="id-cell">{{ mirror_allowed_project_list_id }}</th>
                    <th>{{ mirror_allowed_project_list_name }}</th>
                </tr>
            </thead>
            <tbody>
                {{# there_is_no_project }}
                <tr>
                    <td colspan="3" id="empty-project-list">{{ mirror_allowed_project_list_empty }}</td>
                </tr>
                {{/ there_is_no_project }}
                {{^ there_is_no_project }}
                    {{# allowed_projects }}
                    <tr>
                        <td><input type="checkbox" name="project-ids-to-revoke[]" value="{{ getId }}"></td>
                        <td>{{ getId }}</td>
                        <td>{{ getUnconvertedPublicName }}</td>
                    </tr>
                    {{/ allowed_projects }}
                {{/ there_is_no_project }}
            </tbody>
        </table>
    </form>
</div>
{{/ is_mirror_restricted }}
