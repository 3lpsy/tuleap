<h3>{{ title }}</h3>

<div class="update-n-repositories-popup-content">
    <ul>
        {{# repositories }}
        <li>{{ getFullName }}</li>
        {{/ repositories }}
    </ul>
</div>
<p class="update-n-repositories">{{{ info_mass_update }}}</p>

<form action="{{ form_action }}" method="POST">
    {{{ csrf_input }}}

    {{# mirroring_presenter }}
        <h4>{{ mirroring_title }}</h4>
        <p>{{{ mirroring_info }}}</p>

        <table class="table table-striped table-bordered mirrors-list">
            <thead>
                <tr>
                    <th></th>
                    <th class="url">{{ mirroring_mirror_name }}</th>
                </tr>
            </thead>
            <tbody>
            {{# mirror_presenters }}
                <tr>
                    <td>
                        <input type="checkbox" name="selected_mirror_ids[]" value="{{ id }}">
                    </td>
                    <td class="url">{{ name }}</td>
                </tr>
            {{/ mirror_presenters }}
            </tbody>
        </table>
    {{/ mirroring_presenter }}

    {{# repositories }}
        <input type="hidden" name="repository_ids[]" value="{{ getId }}">
    {{/ repositories }}

    <input type="submit" class="btn btn-primary" id="save-mass-change" name="save-mass-change" value="{{ submit_mass_change }}">
</form>