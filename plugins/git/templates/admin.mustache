<h1>{{ git_admin }}</h1>

<div class="tabbable">
    <ul class="nav nav-tabs git-admin-tabs">
        <li {{# manage_gerrit_templates }}class="active"{{/ manage_gerrit_templates }}>
            <a href="/plugins/git/?action=admin-gerrit-templates&group_id={{ project_id }}">{{ tab_gerrit_templates }}</a>
        </li>
        <li {{# manage_git_admins }}class="active"{{/ manage_git_admins }}>
            <a href="/plugins/git/?action=admin-git-admins&group_id={{ project_id }}">{{ tab_git_admins }}</a>
        </li>
        {{# are_mirrors_defined }}
        <li {{# manage_mass_update_active }}class="active"{{/ manage_mass_update_active }}>
            <a href="/plugins/git/?action=admin-mass-update&group_id={{ project_id }}">{{ tab_mass_update }}</a>
        </li>
        <li {{# manage_default_settings }}class="active"{{/ manage_default_settings }}>
            <a href="/plugins/git/?action=admin-default-settings&group_id={{ project_id }}">{{ tab_default_settings }}</a>
        </li>
        {{/ are_mirrors_defined }}
        {{# default_access_rights_enabled }}
        <li {{# manage_default_access_rights }}class="active"{{/ manage_default_access_rights }}>
            <a href="/plugins/git/?action=admin-default-access_rights&group_id={{ project_id }}">{{ tab_default_access_rights }}</a>
        </li>
        {{/ default_access_rights_enabled }}
    </ul>

    <div class="tab-content git-admin-tab-content">
        {{# manage_gerrit_templates }}
            {{> admin-gerrit-templates }}
        {{/ manage_gerrit_templates }}

        {{# manage_git_admins }}
            {{> admin-git-admins }}
        {{/ manage_git_admins }}

        {{# are_mirrors_defined }}
            {{# manage_mass_update_select_repositories }}
                {{> admin-mass-update-select-repositories }}
            {{/ manage_mass_update_select_repositories }}

            {{# manage_mass_update }}
                {{> admin-mass-update }}
            {{/ manage_mass_update }}

            {{# manage_default_settings }}
                {{> admin-default-settings }}
            {{/ manage_default_settings }}
        {{/ are_mirrors_defined }}

        {{# manage_default_access_rights }}
            {{> admin-git-access-rights }}
        {{/ manage_default_access_rights }}
    </div>
</div>