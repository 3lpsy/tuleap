<form method="POST" action="?pane=mirrors_admin&action=add-mirror" class="form-horizontal">
    {{{ csrf_input }}}
    <h2>{{ mirror_section_title }}</h2>

    <h3>{{ add_mirror }}</h3>
    <dl>
        <div class="control-group">
            <label class="control-label" for="new_mirror_url">{{ url_label }}</label>
            <div class="controls">
                <input name="new_mirror_url" id="new_mirror_url" type="text" required/>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="new_mirror_key">{{ ssh_key_label }}</label>
            <div class="controls">
                <textarea name="new_mirror_key" id="new_mirror_key" cols="23" required></textarea>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="new_mirror_pwd">{{ pwd_label }}</label>
            <div class="controls">
                <input name="new_mirror_pwd" type="password" required/>
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                <input type="submit" value="{{ btn_submit }}" class="btn btn-primary" />
            </div>
        </div>
    </dl>
    {{# list_of_mirrors_not_empty }}
        <h3>{{ existing_mirrors }}</h3>
    {{/ list_of_mirrors_not_empty }}
    {{# list_of_mirrors }}
        <div class="git_admin_mirror">
            <br>
            <div class="control-group">
                <label class="control-label" for="mirror_owner_{{ id }}">{{ owner_label }}</label>
                <div class="controls git_admin_mirror_owner_link">
                    <a name="mirror_owner" href="/admin/usergroup.php?user_id={{ owner_id }}">{{ owner_name }}</a>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="mirror_url_{{ id }}">{{ url_label }}</label>
                <div class="controls">
                    <input id="mirror_url_{{ id }}" type="text" value="{{ url }}" readonly/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="mirror_key_{{ id }}">{{ ssh_key_label }}</label>
                <div class="controls">
                    <textarea id="mirror_key_{{ id }}" cols="23" readonly>{{ ssh_key }}</textarea>
                </div>
            </div>
        </div>
    {{/ list_of_mirrors }}
</form>

