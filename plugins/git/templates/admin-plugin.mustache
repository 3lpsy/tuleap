        <li  class="{{ gerrit_active }}">
            <a href="?pane=gerrit_servers_admin">{{ gerrit_tab_name }}</a>
        </li>
        <li class="{{ mirrors_active }}">
            <a href="?pane=mirrors_admin">{{ mirror_tab_name }}</a>
