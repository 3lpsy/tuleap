<div id="modal-logs-{{ id }}"
    class="modal hide fade modal-logs {{ modal_logs_classname }}"
    tabindex="-1"
    role="dialog"
    aria-labelledby="modal-logs-title"
    aria-hidden="true"
>
    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></a>
        <h3 id="modal-create-logs-title">{{ logs_for }}</h3>
    </div>

    <div class="modal-body">
        <table class="table table-striped table-bordered hooks-jobs-list">
            <thead>
                <tr>
                    <th>{{ modal_logs_time_label }}</th>
                    <th>{{ modal_logs_info_label }}</th>
                </tr>
            </thead>
            <tbody>
                {{# hooklogs }}
                    <tr>
                       <td>{{ time }}</id>
                       <td>
                           {{{ purified_information }}}
                       </id>
                    </tr>
                {{/ hooklogs }}
                {{^ hooklogs }}
                  <tr class="empty-table">
                        <td colspan="2">
                            {{ empty_logs }}
                        </td>
                  </tr>
                {{/ hooklogs }}
            </tbody>
        </table>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">{{ btn_close }}</button>
    </div>
</div>
