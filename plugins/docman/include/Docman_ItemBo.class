require_once('common/dao/CodexDataAccess.class');
require_once('Docman_ItemDao.class');
require_once('Docman_ItemFactory.class');
require_once('Docman_ItemNode.class');
require_once('common/permission/PermissionsManager.class');

class Docman_ItemBo {
    var $groupId;

    function Docman_ItemBo($groupId=0) {
        $this->groupId = (int) $groupId;
    }

    /**
     * Build a subtree from with the list of items
     *
     * This method have to make 2 passes on data because we cannot guarranty
     * that rows will be extracted from DB in the "good order". Actually to
     * build item tree properly, when we are about to add a node to the tree,
     * the parent id have to already exist in the tree. Since, in the database,
     * parent can be defined after children, we have to reorder data first.
     *
     * @param $parentId int Id of tree root.
     * @return ItemNode
     */
    function &getItemSubTree($parentId, $params = null) {
        $_parentId = (int) $parentId;

        $itemDao =& new Docman_ItemDao(CodexDataAccess::instance());
        
        $pm   =& PermissionsManager::instance();
        $user =& $params['user'];
        /*
         * Part1: In order to optimize tree management, 
         */

        // Retreive list of collapsed items for current user
        $collapsedItems = array();
        if (!isset($params['ignore_collapse']) || !$params['ignore_collapse']) {
            $dar =& $itemDao->searchCollapseUserPrefs($this->groupId, user_getid());
            while($dar->valid()) {
                $row =& $dar->current();
                $tmp = explode('_', $row['preference_name']);
                if ($tmp[3] != $_parentId) {
                    $collapsedItems[] = $tmp[3];
                }
                $dar->next();
            }
        }
        

        /*
         * Part2: Fetch itmes
         */
        $dar =& $itemDao->searchByGroupId($this->groupId, $collapsedItems);
        $item_factory =& new Docman_ItemFactory();
        // First part: re-order data.
        $parentArray = array();
        while($dar->valid()) {
            $row =& $dar->current();
            //$parentArray[$row['parent_id']][] =& Docman_ItemFactory::getItemFromRow($row);
            //{{{ Hack by NTY to not build old versions 
            /**/
            if ($user->isSuperUser() || $pm->userHasPermission($row['item_id'], 'PLUGIN_DOCMAN_READ', $user->getUgroups(array())) 
                || $pm->userHasPermission($row['item_id'], 'PLUGIN_DOCMAN_WRITE', $user->getUgroups(array())) 
                || $pm->userHasPermission($row['item_id'], 'PLUGIN_DOCMAN_ADMIN', $user->getUgroups(array())) )
            {
                $item =& $item_factory->getItemFromRow($row);
                if (!isset($parentArray[$row['parent_id']])) {
                    $parentArray[$row['parent_id']] = array();
                }
                if (!isset($parentArray[$row['parent_id']][$row['item_id']])) {
                    $parentArray[$row['parent_id']][$row['item_id']] =& $item;
                } else {
                    $type = $item_factory->getItemTypeForItem($item);
                    if ($type == DOCMAN_ITEM_TYPE_FILE || $type == DOCMAN_ITEM_TYPE_EMBEDDEDFILE) {
                        $old_version =& $parentArray[$row['parent_id']][$row['item_id']]->getCurrentVersion();
                        $new_version =& $item->getCurrentVersion();
                        if ($old_version->getDate() < $new_version->getDate()) {
                            $parentArray[$row['parent_id']][$row['item_id']] =& $item;
                        }
                    }
                }
                unset($item);
            }
            //}}} /**/
            $dar->next();
        }

        /*
         * Part3: Build Tree
         */

        // Create "Root" node
        if ($_parentId) {
            $item =& $this->findById($_parentId);
        }
        if (!$item) {
            $item = new Docman_Item();
        }
        $item->setId($_parentId);
        $treeRoot =& new Docman_ItemNode($item);

        $pidList = array($_parentId);
        // Usage of each is mandatory because we are feeding pidList during
        // pidList loop. Foreach only loop on the set of data that are in the
        // array when the loop start (typicaly only with pid = 0).
        while(list(,$pid) = each($pidList)) {
            if(array_key_exists($pid, $parentArray)) {
                $parentTree =& $treeRoot->searchNode($pid);
                foreach($parentArray[$pid] as $item) {
                    array_push($pidList, $item->getId());
                    $node =& new Docman_ItemNode();
                    $node->setData($item);                   
                    $parentTree->addChild($node);
                    unset($node);
                }
                unset($parentTree);
            }            
        }        
        return $treeRoot;
    }


    // STOP: note for childrens, this is a big messy hack !
    // this 'else' statement only happend a fake child to a node
    // that contains child but for whom child was not fetched from
    // database. We need to add a fake child to be able to detect
    // this case on display to add a clickable 'plus'.
    function &getParentList() {
        $itemDao =& new Docman_ItemDao(CodexDataAccess::instance());

        // Fetch list of items that contains that are parent of other items.
        $dar =& $itemDao->searchAllParent($this->groupId);
        $fakeParentList = array();
        while($dar->valid()) {
            $row =& $dar->current();
            $fakeParentList[] = $row['parent_id'];
            $dar->next();
        }

        return $fakeParentList;
    }


    /**
     * Build a tree from with the list of items
     *
     * @return ItemNode
     */
    function &getItemTree($id = 0, $params = null) {
        if (!$id) {
            $itemDao =& new Docman_ItemDao(CodexDataAccess::instance());
            $id = $itemDao->searchRootIdForGroupId($this->groupId);
        }
        return $this->getItemSubTree($id, $params);
    }

    /**
    * @return Item
    */
    function &findById($id) {
        $item_factory =& $this->_getItemFactory();
        return $item_factory->getItemFromDb($id);
    }
    var $item_factory;
    function &_getItemFactory() {
        if (!$this->item_factory) {
            $this->item_factory =& new Docman_ItemFactory();
        }
        return $this->item_factory;
    }
}

?>