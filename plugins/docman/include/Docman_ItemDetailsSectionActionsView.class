require_once('Docman_ItemDetailsSectionView.class');

class Docman_ItemDetailsSectionActionsView extends Docman_ItemDetailsSectionView {
    var $is_moveable;
    function Docman_ItemDetailsSectionActionsView(&$item, $url, $is_moveable) {
        $this->is_moveable = $is_moveable;
        parent::Docman_ItemDetailsSectionView($item, $url, 'actions', 'Actions');
    }
    function getContent() {
        $folder_or_document = is_a($this->item, 'Docman_Folder') ? 'folder' : 'document';

        $content = '';
        
        $content .= '<form action="'. $this->url .'&amp;id='. $this->item->getId() .'" method="post" enctype="multipart/form-data">';
        $content .= '<dl>';
        
        //{{{ New Version
        if (is_a($this->item, 'Docman_File')) {
            $content .= '<dt>New Version</dt><dd>';
            $content .= 'You can create a new version of this document:<br/>';
            
            $content .= '<table>';
            $content .= '<tr style="vertical-align:top"><td>Label</td><td><input type="text" name="version[label]" value="" /></td></tr>';
            $content .= '<tr style="vertical-align:top"><td>Changelog</td><td><textarea name="version[changelog]" rows="5" cols="50"></textarea></td></tr>';
            $content .= '<tr style="vertical-align:top"><td>Content</td><td>';
            if (is_a($this->item, 'Docman_EmbeddedFile')) {
                $content .= '<textarea name="content" rows="15" cols="50">';
                $version = $this->item->getCurrentVersion();
                if (is_file($version->getPath())) {
                    $content .= file_get_contents($version->getPath());
                }
                $content .= '</textarea>';
            } else {
                $content .= '<input name="file" type="file" />';
            }
            $content .= '</td></tr>';
            $content .= '<tr style="vertical-align:top"><td></td><td><button name="action" value="new_version">Upload new version</button></td></tr>';
            $content .= '</table>';
            $content .= '</dd>';
        }
        //}}}
        
        //{{{ Move
        $content .= '<dt>Move</dt><dd>';
        if (!$this->is_moveable) {
            $content .= 'You cannot move this '. $folder_or_document .' since it is the only child of root';
        } else {
            $content .= 'You can <a href="'. $this->url .'&amp;action=move&amp;id='. $this->item->getId() .'"> move this '. $folder_or_document .'</a> to another folder.';
        }
        $content .= '</dd>';
        //}}}
        
        //{{{
        $content .= '<dt>Delete</dt><dd>';
        $content .= 'You can <a href="'. $this->url .'&amp;view=delete&amp;id='. $this->item->getId() .'">delete this '. $folder_or_document .'</a>.';
        $content .= '</dd>';
        //}}}
        
        $content .= '</dl>';
        $content .= '</form>';
        return $content;
    }
}
?>
