require_once('Docman_ItemDetailsSectionActionsView.class');

class Docman_ItemDetailsSectionDeleteView extends Docman_ItemDetailsSectionActionsView {
    function Docman_ItemDetailsSectionDeleteView(&$item, $url) {
        parent::Docman_ItemDetailsSectionActionsView($item, $url, false);
    }
    function getContent() {
        $folder_or_document = is_a($this->item, 'Docman_Folder') ? 'folder' : 'document';
        
        $content = '';
        
        $content .= '<form action="http://not.yet.implemented" method="GET">';
        $content .= '<div class="docman_confirm_delete">';
        $content .= '<h3>Confirm deletion of '. $folder_or_document .' "'. $this->item->getTitle() .'"</h3>';
        $content .= 'You are going to delete a '. $folder_or_document .'. ';
        if (is_a($this->item, 'Docman_Folder')) {
            $content .= 'Before confirming, please note that all subitems and their versions will be deleted.';
        } else if (is_a($this->item, 'Docman_File')) {
            $content .= 'Before confirming, please note that all versions will be deleted.';
        }
        $content .= '<p>Are you sure that you want to delete this '. $folder_or_document .'?</p>';
        $content .= '<div class="docman_confirm_delete_buttons">';
        $content .= '     <input type="hidden" name="action" value="delete" />';
        $content .= '     <input type="hidden" name="id" value="'. $this->item->getId() .'" />';
        $content .= '     <input type="submit" name="cancel" value="No, I do not want to delete it" />';
        $content .= '     <input type="submit" name="confirm" value="Yes, I am sure !" />';
        $content .= '</div>';
        $content .= '</div>';
        $content .= '</form>';
        
        return $content;
    }
}
?>
