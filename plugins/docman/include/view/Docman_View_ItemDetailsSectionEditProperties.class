require_once('Docman_View_ItemDetailsSectionProperties.class');

class Docman_View_ItemDetailsSectionEditProperties extends Docman_View_ItemDetailsSectionProperties {
    function Docman_View_ItemDetailsSectionEditProperties(&$item, $url) {
        parent::Docman_View_ItemDetailsSectionProperties($item, $url, true);
    }
    function getContent() {
        $html  = '<form action="'. $this->url .'" method="post">';
        $html .= parent::getContent();
        $html .= '</form>';
        return $html;
    }
    function _getEditLink() {
        return '';
    }
    function _getTitle() {
        return '<input type="text" name="item[title]" value="'. htmlentities($this->item->getTitle(), ENT_QUOTES) .'" />';
    }
    function _getRank() {
        return '<input type="text" size="4" name="item[rank]" value="'. htmlentities($this->item->getRank(), ENT_QUOTES) .'" />';
    }
    function _getDescription() {
        return '<textarea rows="3" cols="50" name="item[description]" >'. $this->item->getDescription() .'</textarea>';
    }
    function _getAdditionalRows() {
        $html  = '<tr><td>';
        $html .= '<input type="hidden" name="item[id]" value="'. $this->item->getId() .'" />';
        $html .= '<input type="hidden" name="action" value="update" />';
        $html .= '</td><td>';
        $html .= '<input type="submit" name="confirm" value="'. $GLOBALS['Language']->getText('global','btn_submit') .'" />';
        $html .= '<input type="submit" name="cancel" value="'. $GLOBALS['Language']->getText('global','btn_cancel') .'" />';
        $html .= '</td></tr>';
        return $html;
    }
}
?>
