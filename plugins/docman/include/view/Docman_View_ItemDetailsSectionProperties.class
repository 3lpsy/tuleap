require_once('Docman_View_ItemDetailsSection.class');

class Docman_View_ItemDetailsSectionProperties extends Docman_View_ItemDetailsSection {
    var $user_can_write;
    function Docman_View_ItemDetailsSectionProperties(&$item, $url, $user_can_write = false) {
        $this->user_can_write = $user_can_write;
        $id = 'properties';
        $title = $GLOBALS['Language']->getText('plugin_docman','details_properties');
        parent::Docman_View_ItemDetailsSection($item, $url, $id, $title);
    }
    function getContent() {
        $html  ='';
        $html .= '<table>';
        $html .= '<tr style="vertical-align:top;"><td>'. $GLOBALS['Language']->getText('plugin_docman','field_title') .'</td><td>'. $this->_getTitle()       .'</td></tr>';
        $html .= '<tr style="vertical-align:top;"><td>'. $GLOBALS['Language']->getText('plugin_docman','field_descr') .'</td><td>'. $this->_getDescription() .'</td></tr>';
        //$html .= '<tr style="vertical-align:top;"><td>'. $GLOBALS['Language']->getText('plugin_docman','field_rank') .'</td><td>'. $this->_getRank()        .'</td></tr>';
        $html .= $this->_getAdditionalRows();
        
        $html .= '</table>';
        return $html;
    }
    function _getEditLink() {
        return '';
    }
    function _getTitle() {
        return $this->item->getTitle();
    }
    function _getRank() {
        return $this->item->getRank();
    }
    function _getDescription() {
        return $this->item->getDescription();
    }
    function _getAdditionalRows() {
        $html = '';
        if ($this->user_can_write) {
            $html .= '<tr style="vertical-align:top;"><td>&nbsp;</td>';
            $html .= '<td><a href="'. $this->url .'&amp;action=edit&amp;id='. $this->item->getid() .'">'. $GLOBALS['Language']->getText('plugin_docman','details_properties_edit') .'</a></td></tr>';
        }
        return $html;
    }
}

?>
