require_once('common/dao/include/DataAccessObject.class');

class Docman_MetadataDao extends DataAccessObject {

    function Docman_MetadataDao(&$da) {
        DataAccessObject::DataAccessObject($da);
    }

    function searchById($id) {
        $sql = sprintf('SELECT *'
                       .' FROM plugin_docman_metadata'
                       .' WHERE field_id = %d'
                       , $id);
        return $this->retrieve($sql);
    }

    function searchByGroupId($id, $onlyUsed, $type = array()) {
        $where_clause = '';
        if($onlyUsed) {
            $where_clause .= ' AND use_it = '.PLUGIN_DOCMAN_METADATA_USED;
        }

        if(is_array($type) && count($type) > 0) {
            $where_clause .= ' AND data_type IN ('.implode(',', $type).')';
        }
        
        $sql = sprintf('SELECT *'
                       .' FROM plugin_docman_metadata'
                       .' WHERE group_id = %d'
                       .$where_clause
                       , $id);

        return $this->retrieve($sql);
    }

    // Very limited implementation of update
    // right now, only 'use_it' field is concerned by update
    function updateById($id, $useIt) {
        $sql = sprintf('UPDATE plugin_docman_metadata'
                       .' SET use_it = %d'
                       .' WHERE field_id = %d'
                       , $useIt
                       , $id);
        $inserted = $this->update($sql);        
        return $inserted;
    }
}

?>
