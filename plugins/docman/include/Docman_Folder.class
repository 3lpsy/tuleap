require_once('Docman_Item.class');
require_once('view/Docman_View_Browse.class');

/**
 * Folder is a transport object (aka container) used to share data between
 * Model/Controler and View layer of the application
 */
class Docman_Folder extends Docman_Item {
    
    function Docman_Folder($data = null) {
        parent::Docman_Item($data);
        $this->_addAction(new Docman_ItemActionShowFolder($this));
        $this->_addAction(new Docman_ItemActionNewFolder($this));
        $this->_addAction(new Docman_ItemActionNewDocument($this));
    }
    
    var $nb_of_children;
    function getNbOfChildren() { 
        return $this->nb_of_children; 
    }
    function setNbOfChildren($nb_of_children) { 
        $this->nb_of_children = $nb_of_children;
    }
    
    function initFromRow($row) {
        parent::initFromRow($row);
        $this->setNbOfChildren($row['folder_nb_of_children']);
    }
    function toRow() {
        $row = parent::toRow();
        $row['item_type'] = PLUGIN_DOCMAN_ITEM_TYPE_FOLDER;
        $row['folder_nb_of_children'] = $this->getNbOfChildren();
        return $row;
    }
    
    function isRoot() {
        return $this->parent_id == 0;
    }
    
    var $_items = array();
    function addItem(&$item) {
        $this->_items[] =& $item;
    }
    function getAllItems() {
        return $this->_items;
    }
    
    function accept(&$visitor, $params = array()) {
        return $visitor->visitFolder($this, $params);
    }
}

?>