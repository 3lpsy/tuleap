require_once('DocmanViews.class');
require_once('ItemBo.class');

class DocmanAdminViews extends DocmanViews {
    
    function DocmanAdminViews(&$controler, $view=null) {
        $this->DocmanViews($controler, $view);
             
    }

    function displayNewFolderForm($groupId, $action, &$fi, $name='', $desc='', $rank='') {
        echo '
<form name="'.$action.'" method="post" action="'.$this->_controler->getAdminUrl().'&act='.$action.'&view=dflt_folder">
  <input name="group_id" type="hidden" value="'.$groupId.'" />
  <table>
    <tr>
      <td>'.$GLOBALS['Language']->getText('plugin_docman', 'folder_name').'</td>
      <td><input name="name" type="text" value="'.$name.'" /></td>
    </tr>
    <tr>
      <td>'.$GLOBALS['Language']->getText('plugin_docman', 'folder_desc').'</td>
      <td><textarea name="description">'.$desc.'</textarea></td>
    </tr>
    <tr>
      <td>'.$GLOBALS['Language']->getText('plugin_docman', 'folder_parent').'</td>
      <td><select name="pid">';
        $fi->rewind();
        while($fi->valid()) {
            $folder =& $fi->current();
            echo '<option value="'.$folder->getId().'">'.$folder->getTitle().'</option>';
            $fi->next();
        }

        echo '          </select></td>
    </tr>
    <tr>
      <td>'.$GLOBALS['Language']->getText('plugin_docman', 'folder_rank').'</td>
      <td><input name="rank" type="text" size="3" maxlength="16" value="'.$rank.'" /></td>
    </tr>
  </table>
  <input name="submit" type="submit" value="'.$GLOBALS['Language']->getText('plugin_docman', 'folder_'.$action).'" />
</form>';
    }

    /**
     * View
     */
    function main_menu() {
        echo '
<h2><a href="'.$this->_controler->getAdminUrl().'&view=dflt_folder">'.$GLOBALS['Language']->getText('plugin_docman', 'main_menu_fldr_title').'</a></h2>
<p>'.$GLOBALS['Language']->getText('plugin_docman', 'main_menu_fldr_desc').'</p>';
    }
    
    /**
     * View
     */
    function dflt_folder() {
        $groupId = $this->_controler->getGroupId();
        
        $folderBo = new FolderBo($groupId);        
        $fi =& $folderBo->getList();

        echo "<h2>".$GLOBALS['Language']->getText('plugin_docman', 'folder_list')."</h2>\n";

        echo html_build_list_table_top(array($GLOBALS['Language']->getText('plugin_docman', 'fld_array_id'),
                                             $GLOBALS['Language']->getText('plugin_docman', 'fld_array_title'),
                                             $GLOBALS['Language']->getText('plugin_docman', 'fld_array_rank'),
                                             $GLOBALS['Language']->getText('plugin_docman', 'fld_array_delete')
                                             ));

        $fi->rewind();
        while($fi->valid()) {
            $folder =& $fi->current();
            print '<tr>';
            print '<td><a href="'.$this->_controler->getAdminUrl().'&view=dflt_update_folder&id='.$folder->getId().'">'.$folder->getId().'</a></td>';
            print '<td>'.$folder->getTitle().'</td>';
            print '<td>'.$folder->getRank().'</td>';
            
            $trash = html_trash_link($this->_controler->getAdminUrl().'&act=delete_folder&view=dflt_folder&id='.$folder->getId(),
                                     $GLOBALS['Language']->getText('plugin_docman', 'delete_folder_warn', array($folder->getTitle())),
                                     $GLOBALS['Language']->getText('plugin_docman', 'delete_folder_alt', array($folder->getTitle())));
            print '<td>'.$trash.'</td>';
            print '</tr>';
            $fi->next();
        }

        echo "</table>\n";

        echo "<h2>".$GLOBALS['Language']->getText('plugin_docman', 'new_folder')."</h2>\n";

        $this->displayNewFolderForm($groupId, 'create_folder', $fi);
    }

    /**
     * View
     */
    function dflt_update_folder() {
        echo "<h2>".$GLOBALS['Language']->getText('plugin_docman', 'dflt_update_folder')."</h2>\n";

        $folderBo = new FolderBo($this->_controler->getGroupId());        
        $fi =& $folderBo->getList();

        // Fetch folder to update in previous list
        $fid = (int)$this->_controler->request->get('id');
        $fi->rewind();
        while($fi->valid()) {
            if($fi->key() === $fid) {
                $folder =& $fi->current();
            }
            $fi->next();
        }


        $this->displayNewFolderForm($this->_controler->getGroupId(),
                                    'create_folder',
                                    $fi,
                                    $folder->getTitle(),
                                    $folder->getDescription(),
                                    $folder->getRank());
    }

}