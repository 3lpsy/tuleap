require_once('Docman_ItemDetailsSectionView.class');

class Docman_ItemDetailsSectionPropertiesView extends Docman_ItemDetailsSectionView {
    function Docman_ItemDetailsSectionPropertiesView(&$item, $url, $id = null, $title = null) {
        if (!$id) {
            $id = 'properties';
        }
        if (!$title) {
            $title = 'Properties';
        }
        parent::Docman_ItemDetailsSectionView($item, $url, $id, $title);
    }
    function getContent() {
        
        $html  = '<table>';
        $html .= '<tr style="vertical-align:top;"><td>Title      </td><td>'. $this->_getTitle()       .'</td></tr>';
        $html .= '<tr style="vertical-align:top;"><td>Description</td><td>'. $this->_getDescription() .'</td></tr>';
        $html .= '<tr style="vertical-align:top;"><td>Rank       </td><td>'. $this->_getRank()        .'</td></tr>';
        $html .= $this->_getAdditionalRows();
        $html .= '</table>';
        return $html;
    }
    function _getTitle() {
        //$action = $this->item->getActionWhenUserClickOnTitle(array('default_url' => $this->url));
        $action = false;
        if ($action) {
            $title = '<a href="'. $action .'">'. $this->item->getTitle() .'</a>';
        } else {
            $title = $this->item->getTitle();
        }
        return $title;
    }
    function _getRank() {
        return $this->item->getRank();
    }
    function _getDescription() {
        return $this->item->getDescription();
    }
    function _getAdditionalRows() {
        return '';
    }
}

?>
