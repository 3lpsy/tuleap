class ItemFactory {

    function ItemFactory() {

    }

    function &getItemFromRow(&$row) {
        $item = null;
        switch($row['item_type']) {
        case ITEM_FOLDER:
            $item = new Folder();
            break;
        case ITEM_FILE:
            //$item = new File();
            break;
        case ITEM_LINK:
            //
            break;
        case ITEM_EMBEDFILE:
            //
            break;
        case ITEM_WIKI:
            //
            break;
        default:
            return;
        }

        $item->initFromRow($row);
        return $item;
    }

    function &getItemFromDb($id) {
        $_id = (int) $id;
        $dar =& $this->_dao->getItemById($id);

        if($dar->isError()){
            return;
        }
        
        if(!$dar->valid()) {
            return;
        }

        $row =& $dar->current();

        return(ItemFactory::getItemFromRow($row));
    }

}

