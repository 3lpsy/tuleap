require_once('common/mvc/Actions.class');

require_once('Docman_Folder.class');
require_once('Docman_FolderBo.class');

class DocmanAdminActions extends Actions {
    
    function DocmanAdminActions(&$controler, $view=null) {
        $this->Actions($controler);
	}

    function create_folder() {
        $request =& HTTPRequest::instance();

        $folder = new Docman_Folder();
        $folder->setGroupId($request->get('group_id'));
        $folder->setTitle($request->get('name'));
        //        $folder->setDescription($request->get(''));
        //        $folder->setType($request->get(''));
        //        $folder->setRank($request->get(''));
        $folder->setParentId($request->get('pid'));
        $folder->setOwnerId(user_getid());
        $folder->setCreateDate(time());
        $folder->setUpdateDate(time());

        $folderBo = new Docman_FolderBo();
        $folderBo->create($folder);
    }        


    function delete_folder() {
        $request =& HTTPRequest::instance();
        
        $folder = new Docman_Folder();
        $folder->setId($request->get('id'));        

        $folderBo = new Docman_FolderBo();
        $folderBo->delete($folder);
    }

    function update_folder() {
        $request =& HTTPRequest::instance();

        $folder = new Docman_Folder();
        $folder->setId($request->get('id'));

        if($request->get('name'))
            $folder->setTitle($request->get('name'));

        if($request->get('description'))
            $folder->setDescription($request->get('description'));

        if($request->get('rank'))
            $folder->setRank($request->get('rank'));

        if($request->get('pid'))
            $folder->setParentId($request->get('pid'));

        $folder->setUpdateDate(time());

        $folderBo = new Docman_FolderBo();
        $folderBo->update($folder);
    }


}