<?php

class Docman_HtmlFilterFactory {
    function Docman_HtmlFilterFactory() {
        
    }

    function getFromFilter(&$filter) {
        if(is_a($filter, 'Docman_FilterDate')) {
            return new Docman_HtmlFilterDate($filter);
        }
        if(is_a($filter, 'Docman_FilterOrdering')) {
            return new Docman_HtmlFilterOrdering($filter);
        }
        return null;
    }

}

class Docman_HtmlFilter {
    var $filter;

    function Docman_HtmlFilter(&$filter) {
        $this->filter =& $filter;
 
    }

    function toHtml() {
        return '';
    }
}

class Docman_HtmlFilterDate extends Docman_HtmlFilter {

    function toHtml($formName) {        
        $html  = $this->filter->getTitle().': ';
        $html .= html_field_date($this->filter->getName(),
                                 $this->filter->getValue(),
                                 false,
                                 '10',
                                 '10',
                                 $formName,
                                 false);

        return $html;
    }

}

class Docman_HtmlFilterOrdering extends Docman_HtmlFilter {

    function toHtml($formName) {
        $html = $this->filter->getTitle().': <select name="'.$this->filter->getName().'">'."\n"
            .'<option value="0" '.(($this->filter->getValue() == '0') ? 'selected':'').'>'. $GLOBALS['Language']->getText('plugin_docman', 'filters_ordering_descending') .'</option>'."\n"
            .'<option value="1" '.(($this->filter->getValue() == '1') ? 'selected':'').'>'. $GLOBALS['Language']->getText('plugin_docman', 'filters_ordering_ascending') .'</option>'."\n"
            .'</select>'."\n";
        return $html;
    }
}

/**
 *  Returns a date field
 * 
 *  @param value: initial value
 *  @param size: the field size
 *  @param maxlength: the max field size
 *  @param ro: if true, the field is read-only
 *
 *	@return	string
 */
function html_field_date($field_name='',$value='',$ro=false,$size='10',$maxlength='10',$form_name='artifact_form',$today=false) {
    if ($ro)
        $html = $value;
    else {
		$timeval = ($today ? 'null' : 'document.'.$form_name.'.'.$field_name.'.value'); 
	
		$html = '<INPUT TYPE="text" name="'.$field_name.
            '" size="'.$size.'" MAXLENGTH="'.$maxlength.'" VALUE="'.$value.'">'.
            '<a href="javascript:show_calendar(\'document.'.$form_name.'.'.$field_name.'\','.$timeval.',\''.util_get_css_theme().'\',\''.util_get_dir_image_theme().'\');">'.
            '<img src="'.util_get_image_theme("calendar/cal.png").'" width="16" height="16" border="0" alt="pick_date"></a>';
    }
    return($html);
}


?>
