require_once('common/collection/Visitor.class');

class DisplayItemTreeUlVisitor extends Visitor {
    var $html;

    function DisplayItemTreeVisitor() {
        $this->html  = '';              
    }

    function toHtml() {
        return $this->html;
    }
  

    function visit(&$itemNode) {        
        $item =& $itemNode->getData();        

        if($item !== null) {
            $this->html .= '<li>'.$item->getTitle().'</li>'."\n";
        }
              
        if($itemNode->hasChildren()) {
            $this->html .= '<ul>'."\n";

            $ci =& $itemNode->getChildIterator();               
            
            while($ci->valid()) {
                $child =& $ci->current();
                
                $child->accept($this);
                
                $ci->next();
            }
            
            $this->html .= '</ul>'."\n";
        }
        
    }
}


?>