<table class="table table-bordered table-striped" id="artifacts-folders-content">
    <thead>
        <tr>
            <th>{{ id_label }}</th>
            <th>{{ project_label }}</th>
            <th>{{ tracker_label }}</th>
            <th>{{ summary_label }}</th>
            <th>{{ status_label }}</th>
            <th>{{ last_update_label }}</th>
            <th>{{ submitted_by_label }}</th>
            <th>{{ assigned_to_label }}</th>
            <th>{{ folder_label }}</th>
        </tr>
    </thead>
    <tbody>
        {{^ artifacts }}
            <tr>
                <td colspan="9" class="no-artifacts-in-folder">{{ empty_state }}</td>
            </tr>
        {{/ artifacts }}
        {{# artifacts }}
            <tr>
                <td class="artifacts-folders-rollup">
                    <a href="{{ html_url }}" class="direct-link-to-artifact" data-artifact-id="{{ id }}">{{ xref }}</a>
                </td>
                <td>{{ project_label }}</td>
                <td>{{ tracker_label }}</td>
                <td>{{ title }}</td>
                <td>{{ status }}</td>
                <td>{{ last_modified_date }}</td>
                <td>{{ submitted_by_user }}</td>
                <td>
                    {{^ assignees }}
                        â€“
                    {{/ assignees }}
                    {{# assignees }}
                        {{ . }}
                    {{/ assignees }}
                </td>
                <td>
                    {{# folder_hierarchy }}
                        <i class="icon-angle-right"></i>
                        <a class="direct-link-to-artifact" href="{{ getUri }}&view=artifactsfolders">{{ getTitle }}</a>
                    {{/ folder_hierarchy }}
                </td>
            </tr>
        {{/ artifacts }}
    </tbody>
</table>