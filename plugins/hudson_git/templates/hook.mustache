<form name="edit_git_hudson" method="post" action="/plugins/hudson_git/?group_id={{ project_id }}">
  <input type="hidden" name="action" value="edit_hook" />
  <input type="hidden" name="repository_id" value="{{ repository_id }}" />

  <p>
      <label for="repo_jenkins">{{ jenkins_notification_label }}</label>
      <input type="url" id="repo_jenkins" name="url" value="{{ jenkins_server_url }}" class="input-xxlarge" placeholder="http://yourserver/jenkins" required pattern="https?://.+" />
      <div>{{ jenkins_notification_desc }} <a href="https://wiki.jenkins-ci.org/display/JENKINS/Git+Plugin#GitPlugin-Pushnotificationfromrepository">{{ jenkins_documentation_link_label }}</a>.</div>
  </p>

  <p><input type="submit" name="save" class="btn" value="{{ save_label }}" /></p>
</form>


<table class="table table-striped table-bordered hooks-list">
    <thead>
        <tr>
            <th>URL</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{# has_a_jenkins_hook }}
            <tr class="hook-section">
                <td colspan="2">
                    {{ jenkins_hook }}
                </td>
            </tr>
            <tr>
                <td>{{ jenkins_server_url }}</td>
                <td></td>
            </tr>
        {{/ has_a_jenkins_hook }}
        {{^ has_hooks }}
            <tr class="empty-table">
                <td colspan="2">
                    {{ empty_hooks }}
                </td>
            </tr>
        {{/ has_hooks }}
    </tbody>
</table>

{{# has_hooks }}
    <table class="table table-striped table-bordered mirrors-list">
        <thead>
            <tr>
                <th>{{ label_push_date }}</th>
                <th>{{ label_triggered }}</th>
            </tr>
        </thead>
        <tbody>
            {{# jobs }}
                <tr>
                   <td class='pushdate'>{{ getFormattedPushDate }}</id>
                   <td>
                       {{# getJobUrlList }}
                             <a href='{{ . }}'>{{ . }}</a><br>
                       {{/ getJobUrlList }}
                   </id>
                </tr>
            {{/ jobs }}
            {{^ jobs }}
              <tr class="empty-table">
                    <td colspan="2">
                        {{ empty_jobs }}
                    </td>
              </tr>
          {{/ jobs }}
        </tbody>
    </table>
{{/ has_hooks }}
