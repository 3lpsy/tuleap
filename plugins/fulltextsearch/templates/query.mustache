<h1>Full Text Search</h1>
<form name="fts_query" method="get" action="?func=search">
    <p>Enter the terms you are looking for
        <input type="text" name="query" value="{{terms}}" />
        <input type="submit" />
    </p>
</form>

{{#has_results}}

<p>{{result_count}} document(s) match:
    <table border="1">
        <thead>
            <th>Document</th>
            <th>Project</th>
            <th>Permissions</th>
        </thead>
        <tbody>
        {{#search_results}}
            <tr>
                <td><a href="{{url}}">{{item_title}}</a></td>
                <td>{{project_name}}</td>
                <td>{{permissions}}</td>
            </tr>
        {{/search_results}}
        </tbody>
    </table>
</p>

<p>Query took {{elapsed_time}}s</p>

{{/has_results}}
