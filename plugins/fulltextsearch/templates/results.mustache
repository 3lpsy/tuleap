{{# has_results }}
<ul>
    <li>
        <span class="search-type sub-facets">Projects</span>
        <ul class="sub-facets-list">
            {{# facets }}
            <li>
                <label class="checkbox">
                    <input type="checkbox" class="facets" value="{{value}}" name="facets[{{name}}][]" {{checked}} >{{label}} ({{count}})
                </label>
            </li>
            {{/ facets }}
        </ul>
    </li>
</ul>
{{/ has_results }}

{{> search-results-main }}

{{# has_results }}
    {{# maybe_more_results }}
        <div id="search-more">
            <button class="btn btn-primary" id="search-more-button">{{ more_results }}</button>
        </div>
    {{/ maybe_more_results }}
    <div id="no_more_results" style="display:none;">
        <p><i class="icon-frown"></i> {{ no_more_results }}</p>
    </div>
{{/ has_results }}
{{^ has_results }}
    <p class="no-result"><i class="icon-frown"></i> {{{ no_match_found_string }}}</p>
{{/ has_results }}