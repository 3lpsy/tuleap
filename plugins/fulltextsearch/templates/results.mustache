{{# has_results }}
    <div class="search-pane">
        <div class="search-pane-header">{{ project_facets_label }}</div>
        <div class="search-pane-body full-text-search">
            <ul>
            {{# projects_facet }}
                <li>
                    <p>{{ label }}</p>
                    <select class="facet" multiple name="facets[{{ identifier }}][]" data-placeholder="{{ placeholder }}">
                    {{# values }}
                        <option value="{{ value }}" {{# selected }}selected{{/ selected }}>{{ label }} ({{ count }})</option>
                    {{/ values }}
                    </select>
                </li>
            {{/ projects_facet }}

            {{# my_projects_facet }}
                <li>
                    <label class="checkbox">
                      <input type="checkbox" class="facet" name="facets[{{ identifier }}]" value="{{ value }}" {{# checked }}checked{{/ checked }}> {{ label }}
                    </label>
                </li>
            {{/ my_projects_facet }}
            <ul>
        </div>
    </div>
{{/ has_results }}

{{> search-results-main }}

{{# has_results }}
    {{# maybe_more_results }}
        <div id="search-more">
            <button class="btn btn-primary" id="search-more-button">{{ more_results }}</button>
        </div>
    {{/ maybe_more_results }}
    <div id="no_more_results" style="display:none;">
        <p><i class="icon-frown"></i> {{ no_more_results }}</p>
    </div>
{{/ has_results }}
{{^ has_results }}
    <p class="no-result"><i class="icon-frown"></i> {{{ no_match_found_string }}}</p>
{{/ has_results }}
