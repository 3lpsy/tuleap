<h1>{{ title }}</h1>

<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">{{ subtitle }}</h1>
        </div>

        <section class="tlp-pane-section">
            <form action="/plugins/fulltextsearch/" method="POST">
                <p>{{ reindex_help }}</p>
                <div class="tlp-form-element">
                    <label class="tlp-label" for="group_id">{{ reindex_project_label }}</label>
                    <input type="text"
                           name="fts_project"
                           size="40"
                           id="fts_project"
                           class="tlp-input"
                           placeholder="{{ label_placeholder_project}}">
                </div>

                <input type="hidden" name="service" value="docman">
                <button type="submit" class="tlp-button-primary fulltext-reindex-project-button">
                    <i class="fa fa-repeat tlp-button-icon"></i> {{ submit_project_label }}
                </button>
            </form>
        </section>
    </div>
</section>