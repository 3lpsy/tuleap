<h1>{{ title }}</h1>

<h2>{{ reindex_title }}</h2>
<form action="/plugins/fulltextsearch/" method="POST">
    <div class="control-group">
        <label class="control-label" for="group_id">{{ reindex_project_label }}</label>
        <div class="controls">
            <select id="group_id" name="group_id">
                {{# projects }}
                    <option value="{{ group_id }}">{{ name }}</option>
                {{/ projects }}
            </select>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" value="{{ submit_project_label }}">
</form>