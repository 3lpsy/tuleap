<h1>{{ title }}</h1>

<section class="tlp-pane">
    <div class="tlp-pane-container">
        <div class="tlp-pane-header">
            <h1 class="tlp-pane-title">{{ subtitle }}</h1>
        </div>

        <section class="tlp-pane-section">
            <form action="/plugins/fulltextsearch/" method="POST">
                <p>{{ reindex_help }}</p>
                <div class="tlp-form-element">
                    <label class="tlp-label" for="fulltext-reindex-project-autocompleter">{{ reindex_project_label }}</label>
                    <select class="tlp-select" id="fulltext-reindex-project-autocompleter" name="fts_project" data-placeholder="{{ label_placeholder_project }}"></select>
                </div>

                <input type="hidden" name="service" value="docman">

                <div class="fulltext-reindex-project-submit">
                    <button type="submit" class="tlp-button-primary">
                        <i class="fa fa-repeat tlp-button-icon"></i> {{ submit_project_label }}
                    </button>
                </div>
            </form>
        </section>
    </div>
</section>
