<li class="result {{ type }}">
    <a class="title" href="{{ url }}">{{ item_title }}</a>
    <p class="subtitle">Project: {{ project_name }}<p>

    {{# display_permissions }}
        <p class="subtitle">Permissions: {{ permissions }}</p>
    {{/ display_permissions }}

    {{# has_highlight }}
        <p class="description">{{{ highlight }}}...</p>
    {{/ has_highlight}}
</li>
