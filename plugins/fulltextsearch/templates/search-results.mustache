{{#has_results}}
<p class="fts_resultcount">{{result_count}}</p>
<ol class="fts_results">
{{#search_results}}
    <li class="fts_result">
        <div class="fts_title">
            <a href="{{url}}">{{item_title}}</a>
        </div>
        <p class="fts_highlight">{{{highlight}}}...</p>
        <div class="fts_metadata">Project: {{project_name}}</div>
        {{#display_permissions}}
        <div class="fts_metadata">Permissions: {{permissions}}</div>
        {{/display_permissions}}
    </li>
{{/search_results}}
</ol>
{{/has_results}}

{{#no_results}}
<p>No results found</p>
{{/no_results}}