<div id="siteadmin-config-providers-modal-update-{{ getId }}"
     class="modal hide fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="siteadmin-config-providers-modal-update-{{ getId }}-title"
     aria-hidden="true"
>
    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal">&times;</a>
        <h3 id="siteadmin-config-providers-modal-update-{{ getId }}-title">{{ update_provider }}</h3>
    </div>

    <form method="post">
        {{{ csrf_token }}}
        <input type="hidden" name="action" value="update-provider">
        <input type="hidden" name="id" value="{{ getId }}">
        <div class="modal-body">
            <label for="name">{{ name }}</label>
            <input class="provider-name" type="text" name="name" id="name" value="{{ getName }}" required>

            <label for="authorization_endpoint">{{ authorization_endpoint }}</label>
            <input type="url" pattern="https://.+" name="authorization_endpoint" id="authorization_endpoint" placeholder="{{ https_placeholder }}" value="{{ getAuthorizationEndpoint }}" required>

            <label for="token_endpoint">{{ token_endpoint }}</label>
            <input type="url" pattern="https://.+"name="token_endpoint" id="token_endpoint" placeholder="{{ https_placeholder }}" value="{{ getTokenEndpoint }}" required>

            <label for="userinfo_endpoint">{{ userinfo_endpoint }}</label>
            <input class="provider-user-info-endpoint" type="url" pattern="https://.+" name="userinfo_endpoint" id="userinfo_endpoint" placeholder="{{ https_placeholder }}" value="{{ getUserInfoEndpoint }}" required>

            <label for="client_id">{{ client_id }}</label>
            <input type="text" name="client_id" id="client_id" value="{{ getClientId }}" required>


            <label for="client_secret">{{ client_secret }}</label>
            <input type="text" name="client_secret" id="client_secret" value="{{ getClientSecret }}" required>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ btn_close }}</button>
            <input type="submit" class="btn btn-primary" value="{{ btn_update }}">
        </div>
    </form>
</div>
