<div id="siteadmin-config-providers-modal"
     class="modal hide fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="siteadmin-config-providers-modal-title"
     aria-hidden="true"
>
    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal"><i class="icon-remove"></i></a>
        <h3 id="siteadmin-config-providers-modal-title">{{ add_new_provider }}</h3>
    </div>

    <form method="post">
        {{{ csrf_token }}}
        <input type="hidden" name="action" value="create-provider" />
        <div class="modal-body">
            <label for="name">{{ name }}</label>
            <input type="text" name="name" id="name" required />

            <label for="authorization_endpoint">{{ authorization_endpoint }}</label>
            <input type="url" pattern="https://.+" name="authorization_endpoint" id="authorization_endpoint" required />

            <label for="token_endpoint">{{ token_endpoint }}</label>
            <input type="url" pattern="https://.+"name="token_endpoint" id="token_endpoint" required />

            <label for="userinfo_endpoint">{{ userinfo_endpoint }}</label>
            <input type="url" pattern="https://.+" name="userinfo_endpoint" id="userinfo_endpoint" required />

            <label for="client_id">{{ client_id }}</label>
            <input type="text" name="client_id" id="client_id" required />


            <label for="client_secret">{{ client_secret }}</label>
            <input type="text" name="client_secret" id="client_secret" required />
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ btn_close }}</button>
            <input type="submit" class="btn btn-primary" value="{{ btn_create }}">
        </div>
    </form>
</div>