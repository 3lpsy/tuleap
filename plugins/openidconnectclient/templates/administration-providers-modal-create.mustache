<div id="siteadmin-config-providers-modal-create"
     class="modal hide fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="siteadmin-config-providers-modal-create-title"
     aria-hidden="true"
>
    <div class="modal-header">
        <a role="button" class="close" data-dismiss="modal">&times;</a>
        <h3 id="siteadmin-config-providers-modal-create-title">{{ add_new_provider }}</h3>
    </div>

    <form method="post">
        {{{ csrf_token }}}
        <input type="hidden" name="action" value="create-provider">
        <div class="modal-body">
            <div class="row-fluid">
                <div class="span8">
                    <label for="name">{{ name }}</label>
                    <input class="provider-name" type="text" name="name" id="name" required>
                </div>

                <div class="span2">
                    <label for="icon">{{ icon }}</label>
                    <select name="icon" id="icon" class="provider-icon-selector">
                        <option value=""></option>
                        {{# icons_presenters }}
                        <option value="{{ icon }}"></option>
                        {{/ icons_presenters }}
                    </select>
                </div>

                <div class="span2">
                    <label for="color">{{ color }}</label>
                    <select name="color" id="color" class="provider-color-selector">
                        <option value=""></option>
                        {{# colors_presenters }}
                        <option value="{{ color }}"></option>
                        {{/ colors_presenters }}
                    </select>
                </div>
            </div>

            <label for="authorization_endpoint">{{ authorization_endpoint }}</label>
            <input type="url" pattern="https://.+" name="authorization_endpoint" id="authorization_endpoint" placeholder="{{ https_placeholder }}" required>

            <label for="token_endpoint">{{ token_endpoint }}</label>
            <input type="url" pattern="https://.+"name="token_endpoint" id="token_endpoint" placeholder="{{ https_placeholder }}" required>

            <label for="userinfo_endpoint">{{ userinfo_endpoint }}</label>
            <input class="provider-user-info-endpoint" type="url" pattern="https://.+" name="userinfo_endpoint" id="userinfo_endpoint" placeholder="{{ https_placeholder }}" required>

            <label for="client_id">{{ client_id }}</label>
            <input type="text" name="client_id" id="client_id" required>

            <label for="client_secret">{{ client_secret }}</label>
            <input type="text" name="client_secret" id="client_secret" required>

            <p class="preview-label">{{ preview }}</p>
            <div class="provider-button-preview">
                <a href="#" class="btn btn-large provider-button">
                    <i></i>
                    <span></span>
                </a>
            </div>
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">{{ btn_close }}</button>
            <input type="submit" class="btn btn-primary" value="{{ btn_create }}">
        </div>
    </form>
</div>
