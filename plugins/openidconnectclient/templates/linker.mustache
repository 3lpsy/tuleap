<div id="login-box">
    <h1 id="login-openid-title">{{ link_page_title }}<br>{{ link_page_title_to }}</h1>

    <div id="login-intro">
        {{ link_page_header }}
    </div>

    <form action="?action=link-existing" method="post" name="form_login" autocomplete="off">
        <input type="hidden" name="link_id" value="{{ link_id }}">
        <input type="hidden" name="return_to" value="{{ return_to }}">

        <input type="text" id="loginname" name="loginname" placeholder="{{ account_login_name }}" required autofocus>
        <input type="password" id="password" name="password" placeholder="{{ account_login_password }}" required>

        <button type="submit" name="login" class="btn btn-primary">{{ account_login_login_btn }}</button>
    </form>

    <div id="login-openid-register">
        <span id="login-openid-or">
            <span>{{ or_label }}</span>
        </span>

        <a id="login-openid-register-button" href="{{ link_to_register_page }}" class="btn">{{ register }}</a>
    </div>
</div>
