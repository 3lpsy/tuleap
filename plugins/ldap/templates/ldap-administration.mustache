<form class="form-horizontal" action="/plugins/pluginsadministration/?view=properties&plugin_id={{ plugin_id }}" method="POST">
    <fieldset>
        <legend>Please choose your configuration</legend>
        <div class="control-group">
            <input type="radio" value="{{ open_ldap_value }}" name="ldap_type" checked="checked"> {{ open_ldap_value }}
        </div>
        <div class="control-group">
            <input type="radio" value="{{ active_directory_value }}" name="ldap_type"> {{ active_directory_value }}
        </div>
        <div class="control-group">
            <button type="submit" class="btn">Submit</button>
        </div>
    </fieldset>
</form>